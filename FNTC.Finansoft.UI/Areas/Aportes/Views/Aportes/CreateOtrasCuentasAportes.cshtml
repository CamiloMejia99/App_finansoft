@model FNTC.Finansoft.Accounting.DTO.Aportes.CuentaDistribucionAporte



@section Styles{
    <link href="~/Content/css/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/css/chosen.css" rel="stylesheet" />
    <style>
        .ui-autocomplete {
            z-index: 5000;
        }
    </style>
}

<script src="~/Scripts/Aportes/OtrasCuentas/Create.js"></script>
<script src="~/Scripts/chosen.jquery.min.js"></script>
<script src="~/Scripts/sweetalert2@10.js"></script>
@using (Html.BeginForm("CreateOtrasCuentasAportes", "Aportes", new { area = "Aportes" }, FormMethod.Post, new { id = "theForm" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" name="modo" id="modo" value="@ViewBag.Modo" />
        <div class="card">
            <div class="card-header" style="background-color:#274766;color:white">
                Agregar nueva cuenta
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="color:white">×</button>
            </div>
            <div class="card-body">
                <div class="row" style="margin-left:2%;margin-right:2%">
                    <br />
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Cuenta contable:</label>
                            @Html.DropDownListFor(model => model.Cuenta, (IEnumerable<SelectListItem>)ViewBag.CuentasAuxiliares, "--Seleccione--", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Cuenta, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Porcentaje:</label>
                            @Html.EditorFor(model => model.AuxPorcentaje, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", @placeholder = "Ej: 0.00", @type = "number", @step = "0.01"@*, @required = "required"*@ } })
                            @Html.ValidationMessageFor(model => model.AuxPorcentaje, "", new { @class = "text-danger" })
                            @*@Html.EditorFor(model => model.Porcentaje, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", @placeholder = "Ej: 0.00", @type = "number", @step = "0.01" } })
                            @Html.ValidationMessageFor(model => model.Porcentaje, "", new { @class = "text-danger" })*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

<hr />
<div class="row" style="margin-left:2%;margin-right:2%">
    <button class="btn btn-sm btn-success" id="btnRegistrar">Registrar</button>
    <button class="btn btn-sm btn-danger" data-dismiss="modal">Cancelar</button>
</div>
<br />

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/chosen.jquery.min.js"></script>
    <script src="~/Scripts/sweetalert2@10.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $(".chosen-select-single").chosen();
            $(".chosen-select-multiple").chosen();
        });

    </script>


}

