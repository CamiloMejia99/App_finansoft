@model IEnumerable<FNTC.Finansoft.Accounting.DTO.DeterioroCartera.CuentaDeterioroCartera>

@{
    ViewBag.Title = "Cuentas Provisión Cartera";
    Layout = "~/Views/Shared/_Layoutcreditos.cshtml";
}
<div class="container" style="margin-top:2%; background: rgb(248, 248, 248);">

    <ul class="col-md-offset-2 nav nav-tabs" style="margin-top:0%;border: none; margin-left: 2%;">
        <li><a href="/DeterioroCartera/DeterioroParametros" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Provisión </a></li>
        <li class="active"><a href="#" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Cuentas Provisión Cartera </a></li>
        <li><a href="/DeterioroCartera/Deterioros/create" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Crear Deterioro Cartera </a></li>
        <li><a href="/DeterioroCartera/Deterioros" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Deterioro Cartera </a></li>
    </ul>

    <div class="tab-content contenedortabs">
        <div id="menu1" class="tab-pane fade in active">
            <div class="col-md-12"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 100%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Cuentas Provisión Cartera</h3></div>
            <div class="col-md-12">
                <div class="col m-5">
                    <br />
                    <a href="/DeterioroCartera/DeterioroParametros" class="btn btn-primary" data-toggle="modal">
                        Regresar
                    </a>
                </div>
                <br />
                <table id="tablaDeterioroscuentas" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-condensed">
                
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.IdPlanCuentaDeterioro)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IdPlanCuentaGastosProvision)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TComprobante)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NombreSeleccion)
                        </th>
                        <th>
                            Editar
                        </th>
                        
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CuentaDeterioro.CODIGO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CuentaGastosProvision.CODIGO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoComprobante.CODIGO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreSeleccion)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new {  @class ="btn btn-primary" })
                               
                            </td>
                        </tr>
                    }

                </table>

            </div>

        </div>

    </div>

