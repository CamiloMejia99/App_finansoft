@model FNTC.Finansoft.Accounting.DTO.Nomina.EnvioPlano


@{
    ViewBag.Title = "Agregar - Archivo Plano";
    Layout = "~/Views/Shared/_Layoutcreditos.cshtml";

}

@using (Html.BeginForm("Create", "EnvioPlanoes", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <input id="modo" name="modo" hidden readonly />
    <div class="row">


        <div class="form-group col-md-4">
            <label class="control-label">Nombre Plano:</label>

            @Html.EditorFor(model => model.NombreArchivoPlano, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.NombreArchivoPlano, "", new { @class = "text-danger" })

        </div>

        <div class="form-group col-md-6">

            <label class="control-label">Cargar Documento:</label>
            <input type="file" name="file" id="file" />
            @ViewBag.Message

        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-4">
            <label class="control-label"> Seleccione el tipo de Extencion:</label>
            <select class="form-control" id="Extencion" name="Extencion">
                <option value="">Seleccionar</option>
                <option value=".xlsx">xlsx</option>
                
            </select>
            @Html.ValidationMessageFor(model => model.Extencion, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-7">
            <label class="control-label">Detalles Plano:</label>

            @Html.EditorFor(model => model.Comentarios, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.Comentarios, "", new { @class = "text-danger" })

        </div>
    </div>
        

        <div class="row">
            <div class="modal-footer">

                <button id="guardarConfig" type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </div>





        }
