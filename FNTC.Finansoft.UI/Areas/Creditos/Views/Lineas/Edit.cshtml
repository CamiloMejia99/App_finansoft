@model FNTC.Finansoft.Accounting.DTO.MCreditos.Lineas

@{
    Layout = "~/Views/Shared/_Layoutcreditos.cshtml";
}

@{
    ViewBag.Title = "Editar";
}
@section Styles{
    <link href="~/Content/css/checkbox_radio.css" rel="stylesheet" />
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.Lineas_Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Lineas_Descripcion, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Lineas_Descripcion, new { @id = "Linea_Des", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Lineas_Descripcion)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Lineas_Codigo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Lineas_Codigo, new { @id = "Linea_Cod", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Lineas_Codigo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Lineas_Activo, new { @class = "control-label col-md-2" })
            <div class="col-md-10 checkbox">
                @Html.CheckBoxFor(model => model.Lineas_Activo, new { @id = "LActivo", @type = "checkbox" })
                <label for="LActivo">Activo</label>
                @Html.ValidationMessageFor(model => model.Lineas_Activo)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a la Lista", "Index")
</div>