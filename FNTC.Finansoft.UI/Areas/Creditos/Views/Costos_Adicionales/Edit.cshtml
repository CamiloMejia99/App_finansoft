<script>
        $(document).ready(function () {

            if ($('#Valor').val() == null || $('#Valor').val() == 0) {
                $('#Valor').prop('disabled', true);
                $('#CA_Porcentaje').prop('disabled', false);

            }
            else if ($('#CA_Porcentaje').val() == null || $('#CA_Porcentaje').val() == 0) {
            $('#CA_Porcentaje').prop('disabled', true);
            $('#Valor').prop('disabled', false);
            }




        $('#Tipo_Costo_Id').change(function () {

            var valor = $('#Tipo_Costo_Id').val();

            if (valor == 2) {
                $('#CA_Porcentaje').val(0);
                $('#Valor').val(0);
                $('#Valor').prop('disabled', true);
                $('#CA_Porcentaje').prop('disabled', false);

            } else if (valor == 3) {
                $('#Valor').val(0);
                $('#Valor').prop('disabled', true);
                $('#CA_Porcentaje').prop('disabled', false);
            }
            else if (valor == 1) {
                $('#CA_Porcentaje').val(0);
                $('#Valor').val(0);
                $('#Valor').prop('disabled', false);
                $('#CA_Porcentaje').prop('disabled', true);
            }
        })
        });

        //CARGA DESTINOS DE ACUERDO A LA LINEA SELECCIONADA
        //================================================
        //$('#Destino_Id').prop("disabled", true);
        $('#Guardar').prop("disabled", true);

        $('#Lineas_Id').change(function () {
            $('#Destino_Id').prop("disabled", false);
            $('#Destino_Id').empty();

            $.ajax({
                type: "POST",
                //url: "/Costos_Adicionales/GetStatesByCountryId",
                url: "@Url.Action("GetStatesByCountryId", "Costos_Adicionales")",
                datatype: "Json",
            data: { countryId: $('#Lineas_Id').val() },


            success: function (data) {




                $.each(data, function (index, value) {

                    $('#Destino_Id').append('<option value="' + value.Value + '">' + value.Text + '</option>');



                });

            }


            });//Fin Ajax

            $('#Destino_Id').change(function () {
            if ($('#Destino_Id').val() == null) {

                $('#Guardar').prop("disabled", true);
            }
            else {

                $('#Guardar').prop("disabled", false);
            }
            })//fin blur

        });

        $('#Nombre, #Valor, #CA_Porcentaje').blur(function () {
            $('#Guardar').prop("disabled", false);
        })
        $('#Cuenta_Cod, #Tipo_Costo_Id, #Incrementa_Id, #CA_Porcentaje').change(function () {
            $('#Guardar').prop("disabled", false);
        })

</script>

<script>
    /* SEPARADOR DE MILES POR KEY UP */
    $(document).ready(function () {
        $("#Valor").on({
            "focus": function (event) {
                $(event.target).select();
            },
            "keyup": function (event) {
                $(event.target).val(function (index, value) {
                    return value.replace(/\D/g, "")
                        .replace(/([0-9])([0-9]{3})$/, '$1,$2')
                        .replace(/\B(?=(\d{3})+(?!\d)\.?)/g, ",");
                });
            }
        });
    });
        /*FIN SEPARADOR DE MILES POR KEY UP*/
</script>


