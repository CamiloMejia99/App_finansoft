@model FNTC.Finansoft.Accounting.DTO.MCreditos.Incrementa

@{
    Layout = "~/Views/Shared/_Layoutcreditos.cshtml";
}

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Incrementa</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Incrementa_Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Incrementa_Descripcion, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Incrementa_Descripcion)
                @Html.ValidationMessageFor(model => model.Incrementa_Descripcion)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

    <div>
        @Html.ActionLink("Regresar a la Lista", "Index")
    </div>
