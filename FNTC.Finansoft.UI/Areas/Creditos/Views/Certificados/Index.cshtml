                            <div id="contenido"></div>
                        </div>

                    </div>
                </div>
                <div id="viewLiquidacion" hidden>
                    <hr />
                    <div class="row" style="margin-left:20px">
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label class="control-label col-md-10">Seleccione</label>
                                <div class="col-lg-12">
                                    @Html.DropDownList("terceros2", (IEnumerable<SelectListItem>)ViewBag.terceros2, null, new { @class = "chosen-select-single", @id = "tercerol" })
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label class="control-label col-md-10">Seleccione Línea de crédito</label>
                                <div class="col-lg-12">
                                    @Html.DropDownList("lineas", (IEnumerable<SelectListItem>)ViewBag.lineas, null, new { @class = "chosen-select-single", @id = "linea" })
                                </div>
                            </div>
                        </div>
                        
                            <br />
                            
                                <a target="_blank" href="" class="tabsnota" id="btnLiquidacion2" hidden> <i class="fa fa-file-text"></i> Liquidacion </a>
                            
                        

                    </div>
                    <br />
                    <div class="row" style="margin-left:50px">
                        <button id="btnGenerar" class="btn btn-success" >Generar Certificado</button>
                    </div>
                </div>
            </div>

        </div><!--MENU-->
    </div><!--CONTENEDOR TABS-->

