                        <div class="col-lg-3">
                            <div class="form-group">
                                <label class="control-label col-md-10">Seleccione</label>
                                <div class="col-lg-12">
                                    @Html.DropDownList("terceros", (IEnumerable<SelectListItem>)ViewBag.terceros, null, new { @class = "chosen-select-single", @id = "tercero" })
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2">
