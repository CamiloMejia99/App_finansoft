
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <link href="~/Content/css/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/css/chosen.css" rel="stylesheet" />
}

<script src="~/Scripts/datatable.js"></script>
<script src="~/Scripts/dataTables.buttons.min.js"></script>
<script src="~/Scripts/datatables.js"></script>
<script src="~/Scripts/jquery.dataTablesform.min.js"></script>
<script src="~/Scripts/sweetalert2@10.js"></script>
<script src="~/Scripts/Creditos/ModificarValoresCreditos.js"></script>
<script src="~/Scripts/FormatoMiles.js"></script>
<div class="col-md-12" style="background:#ececec">
    <div class="row">
        <div class="form-group">
            <div class="col-md-12"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 100%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Modificar Valores de Crédito</h3></div>
        </div>
    </div>
    <div style="margin-left:1%;margin-top:1%">
        <div class="row">
            <div class="col-md-2 col-xs-6">
                <div class="form-group">
                    <label>Pagaré</label>
                    <br />
                    @Html.DropDownList("Pagares", null, "Seleccione un pagaré", new { @class = "chosen-select-single", @id = "Pagare" })
                </div>
            </div>
            <div class="col-md-2 col-xs-6">
                <div class="form-group">
                    <label></label>
                    <br />
                    <button class="btn btn-success" id="BtnConsulta">Consultar</button>&nbsp;
                    <button class="btn btn-danger" id="btnSalir">Salir</button>
                </div>
            </div>
            <div class="col-md-7 col-xs-6">
                <label id="lblAsociado"></label>
            </div>
        </div>
        <hr />
        <div class="row" style="margin-left:1%;margin-right:1%">
            <div class="table-responsive">
                <table class="table table-bordered" border="1" id="TablaCuotas">
                    <thead style="color:white;background:#336d81">
                        <tr>
                            <th>ID</th>
                            <th>N° CUOTA</th>
                            <th>CAPITAL</th>
                            <th>INTERES CORRIENTE</th>
                            <th>INTERES MORA</th>
                            <th>SEGURO</th>
                            <th>ADMINISTRACIÓN</th>
                            <th width="5%">DIAS MORA</th>
                            <th>ESTADO</th>
                            <th>VALOR CUOTA</th>
                            <th width="8%">NUEVO I.C</th>
                            <th width="8%">NUEVO I.M</th>
                            <th width="8%">NUEVO SEGURO</th>
                            <th width="8%">NUEVO ADMON</th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="ListCuotas" style="background:white;">
                    </tbody>
                </table>
            </div>

        </div>
    </div>


</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            $(".chosen-select-single").chosen();
            $(".chosen-select-multiple").chosen();
        });
    </script>
}