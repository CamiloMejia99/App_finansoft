@model IEnumerable<FNTC.Finansoft.Accounting.DTO.MCreditos.Cuentas>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="container" style="margin-top:1%; background: rgb(248, 248, 248);">
        <div class="col-md-12">
            <h2 style="color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Configuración</h2>
        </div>
        <ul class="col-md-offset-2 nav nav-tabs" style="margin-top:2%;border: none; margin-left: 2%;">
            <li><a href="/Creditos/Lineas" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Lineas</a></li>
            <li><a href="/Creditos/Destinos" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Destinos</a></li>
            <li><a href="/Creditos/Subdestinos" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> SubDestinos</a></li>
            <li class="active"><a href="/Creditos/Cuentas" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Cuentas</a></li>
            <li><a href="/Creditos/Forma_Pago" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Forma Pago</a></li>
            <li><a href="/Creditos/Clase_Garantias" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Clase Garantias</a></li>
            <li><a href="/Creditos/Garantias" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Garantias</a></li>
            <li><a href="/Creditos/Tipo_Costo" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Tipo Costo</a></li>
            <li><a href="/Creditos/Tipo_Periodo" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Tipo Periodo</a></li>
            <li><a href="/Creditos/Costos_Adicionales" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Costos Adici.</a></li>
            <li><a href="/Creditos/Incrementa" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Incrementos </a></li>
            <li><a href="/Creditos/CConsecutivos" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Pagare - Libranza </a></li>
            <li><a href="/Creditos/ReporteSuper" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Reporte </a></li>
            <li><a href="/Creditos/ProcesosAutomaticos/Edit/1" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Procesos Automaticos </a></li>
            <li><a href="/Creditos/Creditos" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Procesos </a></li>
        </ul>

        <div class="row">
            <div class="col-md-12"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 100%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important; ">Cuentas Capital - Intereses - Otras</h3></div>
            <div id="menu1" class="tab-pane fade in active">
                <br />
                <div class="row">
                    <div class="form-group" style="margin-left:2%">
                        <a href="/Creditos/Creditos/Index" class="btn btn-sm btn-danger" id="regresar"><i class="fa fa-arrow-left"></i>&nbsp;Regresar</a>
                        <a href="/Creditos/Cuentas/Create" class="btn btn-sm btn-primary" id="regresar"><i class="fa fa-folder-open"></i>&nbsp;Agregar Cuenta</a>

                        @*@Html.ActionLink("Agregar Cuenta", "Create", null, null, new { @class = "btn btn-primary btn-medium" })*@

                    </div>

                    <br />
                    <div class="table-responsive col-md-12">
                        <div class="col-md-12">
                            <table id="tablaCreditos" class="table table-striped table-bordered dataTable no-footer" cellspacing="0" width="100%">
                                <thead style="background-color: #2B7785; color: white">
                                    <tr>
                                        <th width="8%">
                                            @Html.DisplayNameFor(model => model.Cuenta_Cod)
                                        </th>
                                        <th width="16%">
                                            @Html.DisplayNameFor(model => model.Cuenta_Descripcion)
                                        </th>
                                        <th width="18%">
                                            @Html.DisplayNameFor(model => model.Funcion)
                                        </th>
                                        <th width="8%">
                                            @Html.DisplayNameFor(model => model.TipoComprobante)
                                        </th>
                                        <th width="16%">
                                            Descripcion Comprobante
                                        </th>
                                        <th width="8%">
                                            @Html.DisplayNameFor(model => model.Destino_Id)
                                        </th>
                                        <th width="10%">Opciones</th>
                                    </tr>
                                </thead>
                                <tbody style="background-color: white">
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Cuenta_Cod)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Cuenta_Descripcion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NombreFuncion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TipoComprobante)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TiposComprobantes.NOMBRE)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Destinos.Destino_Descripcion)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Editar", "Edit", new { id = item.id }, new { @class = "btn btn-info btn-xs" })
                                                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "btn btn-danger btn-xs" })
                                            </td>
                                        </tr>
                                    }

                                </tbody>

                            </table>
                        </div>


                    </div>

                </div>
            </div>
        </div>
    </div>
</div>



<link href="~/Content/css/jquery.dataTablesform.min.css" rel="stylesheet" />

@section scripts
{
    <script src="~/Scripts/jquery.dataTablesform.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#tablaCreditos').DataTable({
                "language": {
                    "url": "/Content/Spanish.json"
                }
            });
        });
    </script>


}