@model FNTC.Finansoft.Accounting.DTO.FabricaCreditos.FCDocumentosAsociados

@{
    ViewBag.Title = "Editar Documentacion";
    Layout = "~/Views/Shared/_Layoutcreditos.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idDoc)

        <div class="form-group col-md-4">
          
            <input type="hidden" name="idSolicitud" id="idSolicitud" class="form-control" autocomplete="off" readonly />
            <label>NIT Asociado:</label>
            <input type="text" name="idAsociado" id="idAsociado" class="form-control" autocomplete="off" readonly />


            <label class="control-label"> VERIFICACION :</label>
            <select class="form-control" id="documentoVerificado" name="documentoVerificado">
                <option value="Pendiente">Seleccionar</option>
                <option value="Aprobada">Aprobada</option>
                <option value="NoAprobada">No Aprobada</option>
            </select>
            @Html.ValidationMessageFor(model => model.documentoVerificado, "", new { @class = "text-danger" })


            @Html.LabelFor(model => model.comentarios, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.comentarios, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.comentarios, "", new { @class = "text-danger" })


            <br />
            <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>

    </div>
}
<script>
    $("#idSolicitud").val("@Model.idSolicitud");
    $("#idAsociado").val("@Model.idAsociado");
    $("#documentoVerificado").val("@Model.documentoVerificado");
    $("#comentarios").val("@Model.comentarios");



</script>