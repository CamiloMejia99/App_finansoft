@model FNTC.Finansoft.Accounting.DTO.FabricaCreditos.FCDocumentosAsociados


@{
    ViewBag.Title = "Agregar Documentacion";
    Layout = "~/Views/Shared/_Layoutcreditos.cshtml";
    var idSolicitud = ViewBag.idSolicitud;
    var idAsociado = ViewBag.idAsociado;

}

@using (Html.BeginForm("AgregarDocu", "ModificarInf", FormMethod.Post, new { enctype = "multipart/form-data" }))


{
    @Html.AntiForgeryToken()

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <input id="modo" name="modo" hidden readonly />
    <input type="hidden" name="idSolicitud" id="idSolicitud" class="form-control" value="@idSolicitud" readonly />

    <div class="row">
        <div class="form-group col-md-4">
            <label class="control-label">ID Asociando:</label>
            <input type="text" name="idAsociado" id="idAsociado" class="form-control" value="@idAsociado" readonly />
        </div>
        <div class="form-group col-md-4">

            <label class="control-label">Cargar Documento:</label>
            <input type="file" name="file" id="file" />
            @ViewBag.Message

        </div>
        <div class="form-group col-md-4">
            <label class="control-label"> Seleccione el tipo de Extencion:</label>
            <select class="form-control" id="Extencion" name="Extencion">
                <option value="">Seleccionar</option>
                <option value=".jpg">JPG</option>
                <option value=".png">PNG</option>
                <option value=".pdf">PDF</option>
            </select>

        </div>

    </div>
    <div class="row">
        <div class="form-group col-md-4">
            <label class="control-label">Seleccione Documento a Cargar:</label>

            @Html.Action("ListaDocumento", "CrearSolicitud")


        </div>


        <div class="form-group col-md-4">
            <label class="control-label">Nombre Documento :</label>

            @Html.EditorFor(model => model.NombreDocumento, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", @id = "NombreDocumento" } })


        </div>


        <div class="form-group col-md-4">
            <label class="control-label">Comentarios :</label>

            @Html.EditorFor(model => model.comentarios, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", @id = "comentarios" } })


        </div>


    </div>
    <div class="row">
        <div class="modal-footer">

            <button id="guardarConfig" type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </div>


}
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
