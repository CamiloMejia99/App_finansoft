@model FNTC.Finansoft.Accounting.DTO.FabricaCreditos.FCDocumentosAsociados

@{
    ViewBag.Title = "Documentacion";
    Layout = "~/Views/Shared/_Layoutcreditos.cshtml";

    var idSolicitud = ViewBag.IdSolicitud;

}


@using (Html.BeginForm("EliminarDoc", "ModificarInf", new { area = "FabricaCreditos" }, FormMethod.Post, new { id = "theForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idDoc)


        <div class="form" align="center"><h3><span class="label label-info">Eliminar Documento</span></h3></div>
        <br />
        <div class="row">
            
            <input type="hidden" id="idSolicitud" value="@idSolicitud" name="idSolicitud" readonly />
            <div class="form-group col-md-6">
                <label>+ NIT Asociado:</label>
                @Html.EditorFor(model => model.idAsociado, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

            </div>

            <div class="form-group col-md-6">
                <label>+ Nombre del Documento:</label>
                @Html.EditorFor(model => model.NombreDocumento, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

            </div>

        </div>
        <div class="row">

            <div class="form-group col-md-6">
                <label>+ Motivos de Eliminacion:</label>
                @Html.EditorFor(model => model.MotivosEliminacion, new { htmlAttributes = new { @class = "form-control" } })

            </div>

        </div>

        <div class="form">
            <br />
            <div class="form-group col-md-1">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>

        </div>

    </div>
}


