@model FNTC.Finansoft.Accounting.DTO.FabricaCreditos.FCSolicitudes

@{
    ViewBag.Title = "Cambio Estado";
    Layout = "~/Views/Shared/_Layoutcreditos.cshtml";
    var idSolicitud = ViewBag.idSolicitud;
    var idAsociado = ViewBag.idAsociado;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idSolicitud)


        <div class="form-group col-md-4">
            <label>No. Solicitud:</label>
            <input type="text" value="@idSolicitud" class="form-control" autocomplete="off" readonly />
            <label>NIT:</label>
            <input type="text" id="idasociado" name="idasociado" value="@idAsociado" class="form-control" autocomplete="off" readonly />


            <label class="control-label"> VERIFICACION :</label>
            <select class="form-control" id="estado" name="estado">
                <option value="Fase-N1-Op">Aprobado por Operario</option>
            </select>

            <label>Comentarios:</label>
            <textarea type="text" name="ComentarioOp" id="ComentarioOp" class="form-control" autocomplete="off"></textarea>

            <br />
            <input type="submit" value="Guardar" class="btn btn-primary" />
            <a id="Cancelar" class="btn btn-danger" data-toggle="modal">
                Cancelar
            </a>
        </div>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
    $("#Cancelar").click(function () {
        location.href = '@Url.Action("EditarPrestamo", "ModificarInf", new { id = idSolicitud })';
    });

    </script>
}