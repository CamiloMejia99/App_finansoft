
@model IEnumerable<FNTC.Finansoft.Accounting.DTO.FabricaCreditos.FCRolesUsuario>

@using FNTC.Finansoft.Accounting.DTO.OperativaDeCaja
@using FNTC.Finansoft.Accounting.DTO.Email
@using FNTC.Finansoft.Accounting.DTO.FabricaCreditos



@{
    ViewBag.Title = "CONFIGURACION - FÁBRICA DE CRÉDITOS";
    Layout = "~/Views/Shared/_Layoutcreditos.cshtml";

}

<script src="~/Scripts/sweetalert.min.js"></script>
<link href="~/Content/css/sweetalert.css" rel="stylesheet" />
<div class="container" style="margin-top:2%; background: rgb(248, 248, 248);">

    <ul class="col-md-offset-2 nav nav-tabs" style="margin-top:0%;border: none; margin-left: 2%;">
        <li><a href="/FabricaCreditos/CrearConfiguracion/Vista" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Configuración </a></li>
        <li><a href="/FabricaCreditos/ActividadesAsociados" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Actividades </a></li>
        <li><a href="/FabricaCreditos/Dependencias" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Dependencias </a></li>
        <li><a href="/FabricaCreditos/MotivosDevolucion" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Devolución </a></li>
        <li><a href="/FabricaCreditos/Documentos" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Documentos </a></li>
        <li><a href="/FabricaCreditos/DocumentosActividad" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Documentos Por Actividad </a></li>
        <li><a href="/FabricaCreditos/EntesAprobacion" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Entidades </a></li>
        <li><a href="/FabricaCreditos/CentralRiesgo" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Centrales</a></li>
        <li class="active"><a href="/FabricaCreditos/RolesUsuario/Index" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Roles Usuario </a></li>
    </ul>
    <div class="tab-content contenedortabs">
        <div id="" class="tab-pane fade in active">
            <div class="col-md-12"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 100%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Roles de Usuario</h3></div>
            <div class="col-md-12">
                <div class="col m-5">
                    <a href="/FabricaCreditos/RolesUsuario/Crear" class="btn btn-primary" data-toggle="modal">
                        Nuevo Rol Usuario
                    </a>
                </div>
                <br />
                <div style="width:100%; margin:0 auto" class="tablecontainer">
                    <table id="" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-condensed">
                        <thead>
                            <tr>
                                <th>Editar</th>
                                <th>Usuario</th>
                                <th>Dependendencia</th>
                                <th>Rol Operario</th>
                                <th>Rol Analista</th>
                                <th>Rol Ente</th>
                                <th>Rol Informativo</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.ActionLink("Editar", "Editar", new { id = item.Id_Permisos })
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AspNetUsers.Nombres)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Dependencias.nombreDependencia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rol_Operario)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rol_Analista)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rol_Ente)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rol_Informativo)
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/FabricaCreditos/InicioFabricaCreditos" class="btn btn-primary" data-toggle="modal">
                        Regresar
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>
