@model FNTC.Finansoft.Accounting.DTO.FabricaCreditos.FCRolesUsuario

@{
    ViewBag.Title = "Edita";
    Layout = "~/Views/Shared/_Layoutcreditos.cshtml";
}

<script src="~/Scripts/sweetalert.min.js"></script>
<link href="~/Content/css/sweetalert.css" rel="stylesheet" />

<div class="container" style="margin-top:2%; background: rgb(248, 248, 248);">

    <ul class="col-md-offset-2 nav nav-tabs" style="margin-top:0%;border: none; margin-left: 2%;">
        <li><a href="/FabricaCreditos/CrearConfiguracion/Vista" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Configuración </a></li>
        <li><a href="/FabricaCreditos/ActividadesAsociados" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Actividades </a></li>
        <li><a href="/FabricaCreditos/Dependencias" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Dependencias </a></li>
        <li><a href="/FabricaCreditos/MotivosDevolucion" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Devolución </a></li>
        <li><a href="/FabricaCreditos/Documentos" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Documentos </a></li>
        <li><a href="/FabricaCreditos/DocumentosActividad" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Documentos Por Actividad </a></li>
        <li><a href="/FabricaCreditos/EntesAprobacion" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Entidades </a></li>
        <li><a href="/FabricaCreditos/CentralRiesgo" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Centrales</a></li>
        <li><a href="/FabricaCreditos/RolesUsuario" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Roles Usuario</a></li>
    </ul>
    <div class="tab-content contenedortabs">
        <div id="menu1" class="tab-pane fade in active">
            <div class="col-md-12"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 100%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Roles Usuario - Adicionar</h3></div>
            <div class="col-md-12">
                <div class="col m-5">
                    <a href="/FabricaCreditos/RolesUsuario/Index" class="btn btn-primary" data-toggle="modal">
                        Regresar
                    </a>

                </div>


                <div class="modal-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Id_Permisos)


                            <div class="form-group col-md-6">
                                @Html.LabelFor(model => model.Rol_Operario, htmlAttributes: new { @class = "control-label" })
                                <select class="form-control" id="Rol_Operario" name="Rol_Operario">
                                    <option value="Si" @(Model.Rol_Operario == "Si" ? "selected" : "")>Si</option>
                                    <option value="No" @(Model.Rol_Operario == "No" ? "selected" : "")>No</option>
                                </select>


                                @Html.ValidationMessageFor(model => model.Rol_Operario, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group col-md-6">
                                @Html.LabelFor(model => model.Rol_Analista, htmlAttributes: new { @class = "control-label" })
                                <select class="form-control" id="Rol_Analista" name="Rol_Analista">
                                    <option value="Si" @(Model.Rol_Analista == "Si" ? "selected" : "")>Si</option>
                                    <option value="No" @(Model.Rol_Analista == "No" ? "selected" : "")>No</option>
                                </select>


                                @Html.ValidationMessageFor(model => model.Rol_Analista, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group col-md-6">
                                @Html.LabelFor(model => model.Rol_Ente, htmlAttributes: new { @class = "control-label" })
                                <select class="form-control" id="Rol_Ente" name="Rol_Ente">
                                    <option value="Si" @(Model.Rol_Ente == "Si" ? "selected" : "")>Si</option>
                                    <option value="No" @(Model.Rol_Ente == "No" ? "selected" : "")>No</option>
                                </select>


                                @Html.ValidationMessageFor(model => model.Rol_Ente, "", new { @class = "text-danger" })

                            </div>

                            <div class="row">
                                <div class="modal-footer">

                                    <button id="guardarConfig" type="submit" class="btn btn-primary">Modificar</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>



