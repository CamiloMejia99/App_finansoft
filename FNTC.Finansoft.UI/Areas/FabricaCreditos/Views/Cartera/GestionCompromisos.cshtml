
@model IEnumerable<FNTC.Finansoft.Accounting.DTO.MCreditos.TotalesCreditos>

@using FNTC.Finansoft.Accounting.DTO.OperativaDeCaja
@using FNTC.Finansoft.Accounting.DTO.FabricaCreditos

@{
    ViewBag.Title = "CARTERA";
    Layout = "~/Views/Shared/_Layoutcreditos.cshtml";

}

<script src="~/Scripts/sweetalert.min.js"></script>
<link href="~/Content/css/sweetalert.css" rel="stylesheet" />
<div class="container" style="margin-top:1%; background: rgb(248, 248, 248);">

    <ul class="col-md-offset-2 nav nav-tabs" style="margin-top:0%;border: none; margin-left: 2%;">


        <li><a href="/FabricaCreditos/Cartera/GestionCitas" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Gestion de Cartera </a></li>
        <li class="active"><a href="#" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Compromisos </a></li>
        <li><a href="/FabricaCreditos/Cartera/AdministracionCompromisos" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Administracion & Control de Compromisos </a></li>
        <li><a href="/FabricaCreditos/Cartera/GestionPreJuridico" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Pre - Juridico </a></li>
        <li><a href="/FabricaCreditos/Cartera/ResumenGestionCartera" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Resumen Gestion De Cartera </a></li>


    </ul>
    <div class="tab-content contenedortabs">
        <div id="" class="tab-pane fade in active">
            <div class="col-md-12"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 100%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Compromisos</h3></div>
            <div class="col-md-12">

                <br />
                <div style="width:100%; margin:0 auto" class="tablecontainer">
                    <table id="gestioncompromisos" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-condensed">
                        <thead style="background-color: darkblue; color: white">
                            <tr>


                                <th>Pagare</th>
                                <th>Fecha Proximo Pago</th>
                                <th>Capital En Mora</th>
                                <th>Inteses Corrientes En Mora</th>
                                <th>Interes Mora Pendiente</th>
                                <th>Compromisos</th>



                            </tr>
                        </thead>
                        <tbody style="background-color: white">
                            @foreach (var item in Model)
                            {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Pagare)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaProximoPago)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CapitalMoraPendiente)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InteresCorrientePendiente)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InteresMoraPendiente)
                                </td>
                                <td>
                                    @Html.ActionLink("Gestionar", "GestionComprimisosDetallesDelCreditoGC", new { id = item.Pagare })
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/FabricaCreditos/Cartera/CarteraIni" class="btn btn-primary" data-toggle="modal">
                        Regresar
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#gestioncompromisos').DataTable();
    });
</script>