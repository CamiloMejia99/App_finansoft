@model FNTC.Finansoft.Accounting.DTO.ControlCartera.CRConveniosTipoDeConvenios

@{
    ViewBag.Title = "Editar Cartera";
    Layout = "~/Views/Shared/_Layoutcreditos.cshtml";
}

<script src="~/Scripts/sweetalert.min.js"></script>
<link href="~/Content/css/sweetalert.css" rel="stylesheet" />

<div class="container" style="margin-top:2%; background: rgb(248, 248, 248);">

    <ul class="col-md-offset-2 nav nav-tabs" style="margin-top:0%;border: none; margin-left: 2%;">
        <li><a href="/FabricaCreditos/Cartera/ConfiguracionCartera" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Gestion - Clases De Gestion </a></li>
        <li><a href="/FabricaCreditos/Cartera/GestionContacto" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Gestion - Contacto </a></li>
        <li><a href="/FabricaCreditos/Cartera/GestionRespuesta" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Gestion - Respuesta </a></li>
        <li class="active"><a href="#" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Convenios - Tipos De Convenios </a></li>
    </ul>
    <div class="tab-content contenedortabs">
        <div id="menu1" class="tab-pane fade in active">
            <div class="col-md-12"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 100%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Tipo De Convenios - Editar</h3></div>
            <div class="col-md-12">
                <div class="col m-5">
                    <a href="/FabricaCreditos/Cartera/ConveniosTipoDeConvenio" class="btn btn-primary" data-toggle="modal">
                        Regresar
                    </a>

                </div>


                <div class="modal-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.idTipoDeConvenios)

                            <div class="row">

                                <div class="form-group col-md-6">
                                    @Html.LabelFor(model => model.TipoDeConvenios, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.TipoDeConvenios, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.TipoDeConvenios, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-md-6">

                                    @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "control-label" })
                                    <select class="form-control" id="Estado" name="Estado">
                                        <option value="Si" @(Model.Estado == "Si" ? "selected" : "")>Si</option>
                                        <option value="No" @(Model.Estado == "No" ? "selected" : "")>No</option>
                                    </select>

                                    @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })

                                </div>

                            </div>

                            <div class="row">
                                <div class="modal-footer">

                                    <button id="guardarConfig" type="submit" class="btn btn-primary">Modificar</button>
                                </div>
                            </div>

                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>



