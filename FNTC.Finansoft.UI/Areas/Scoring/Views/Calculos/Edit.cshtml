@model FNTC.Finansoft.Accounting.DTO.Scoring.ViewModelScoringCalculos

@{
    Layout = "~/Views/Shared/_LayoutActivosFijos.cshtml";
}
@{
    ViewBag.Title = "Formulas";
}
<link href="~/Content/css/chosen.css" rel="stylesheet" />


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()




        <div class="row">

            <div class="col-lg-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        Formulas
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            @Html.ValidationSummary(true)




                            <dix|v class="row">
                                @Html.ValidationSummary(true)
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <strong> Descripción </strong>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <strong> Concepto </strong>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <strong> Formula </strong>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <strong> Porcentaje Otorgado al usuario</strong>
                                    </div>
                                </div>
                            </dix|v>
                            <dix|v class="row">
                                @Html.ValidationSummary(true)
                                <div class="col-md-3">
                                    <div class="form-group">
                                        @Html.DisplayFor(model => model.NombreFormula)
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        @Html.DisplayFor(model => model.Concepto)
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        @Html.DisplayFor(model => model.Formula)
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.Porcentaje, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0", max = "100", pattern = "^[0-9]+", style = "width: 80px;" } })
                                        @Html.ValidationMessageFor(model => model.Porcentaje, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </dix|v>
                            <dix|v class="row">
                                @Html.ValidationSummary(true)
                                <div class="col-md-3">
                                    <div class="form-group">
                                        @Html.DisplayFor(model => model.NombreFormula2)
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        @Html.DisplayFor(model => model.Concepto2)
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        @Html.DisplayFor(model => model.Formula2)
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        @*Html.DisplayFor(model => model.Porcentaje2)*@
                                    </div>
                                </div>
                            </dix|v>




                            <br />
                            <div class="row">
                                <div class="col-lg-5">
                                    <div class="form-group">

                                        <div class="col-md-2">
                                            <input type="submit" value="Guardar Cambios" class="btn btn-success" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @*HASTA AQUI*@
                    </div>
                </div>

            </div>
        </div>


    }


    <div>
        @Html.ActionLink("Regresar a la Lista", "../Scoring/")
    </div>
</body>
</html>
