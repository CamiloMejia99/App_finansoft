@using FNTC.Finansoft.Accounting.DTO.Result
@model IEnumerable<FNTC.Finansoft.Accounting.DTO.Contabilidad.CuentaMayor>

@{
    ViewBag.Title = "Index";
    var result = (Result)ViewBag.result;



    if (Model == null)
    {
        Response.Redirect(Url.Action("Index", "PlanDeCuentas"));
    }

    var menu = (string)TempData["menu"];
}


<script src="~/Scripts/jsGeneral.js"></script>
<link href="~/Content/stylegeneral.css" rel="stylesheet" />

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="col-sm-12">

    <div class="col-md-12">
        <div class="form-group">
            <div class="col-md-10"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 121%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Plan de cuentas</h3></div>
            <div class="col-md-2" style=" margin-top: 3%;"><button class="AddUser btn btn-success btn-xs btnnuevo">Nuevo</button></div>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-responsive" style="background-color:#FFF">
            <tr>
                <th class="columnatablaazul">
                    @Html.DisplayNameFor(model => model.CODIGO)
                </th>
                <th class="columnatablaazul2">
                    @Html.DisplayNameFor(model => model.NOMBRE)
                </th>
                <th class="columnatablaazul">
                    @Html.DisplayNameFor(model => model.NATURALEZA)
                </th>
                <th class="columnatablaazul2">
                    @Html.DisplayNameFor(model => model.REQTERCERO)
                </th>
                <th class="columnatablaazul">
                    @Html.DisplayNameFor(model => model.REQCCOSTO)
                </th>
                <th class="columnatablaazul2">
                    @Html.DisplayNameFor(model => model.CORRIENTE)
                </th>
                <th class="columnatablaazul">
                    @Html.DisplayNameFor(model => model.VALIDASALDO)
                </th>
                <th class="columnatablaazul2">
                    @Html.DisplayNameFor(model => model.INACTIVO)
                </th>
                <td width="5%" class="columnatablaazul">
                    @Html.DisplayNameFor(model => model.EsCuentaImpuesto)
                </td>
                <th class="columnatablaazul2">
                    @Html.DisplayNameFor(model => model.Saldo)
                </th>

                <th class="columnatablaazul">Opciones</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CODIGO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NOMBRE)
                    </td>
                    <td class="alinearcentro">
                        @Html.DisplayFor(modelItem => item.NATURALEZA)
                    </td>
                    <td class="alinearcentro">
                        @Html.DisplayFor(modelItem => item.REQTERCERO)
                    </td>
                    <td class="alinearcentro">
                        @Html.DisplayFor(modelItem => item.REQCCOSTO)
                    </td>
                    <td class="alinearcentro">
                        @Html.DisplayFor(modelItem => item.CORRIENTE)
                    </td>
                    <td class="alinearcentro">
                        @Html.DisplayFor(modelItem => item.VALIDASALDO)
                    </td>
                    <td class="alinearcentro">
                        @Html.DisplayFor(modelItem => item.INACTIVO)
                    </td>
                    <td class="alinearcentro">
                        @Html.DisplayFor(modelItem => item.EsCuentaImpuesto)
                    </td>

                    <td class="alinearcentro">
                        @Html.DisplayFor(modelItem => item.Saldo)
                    </td>

                    <td>
                        <a class="editartablas" id="editarboton" onclick="editar(item.CODIGO)" title="Editar" style="padding: 5%;">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </a>|

                        <a class="detalletablas" href="/Accounting/FormasPago/Details/" title="Detalles" style="padding: 5%;">
                            <i class="fa fa-info-circle" aria-hidden="true"></i>
                        </a>|

                        <a class="eliminartablas" href="/Accounting/FormasPago/Delete/" title="Eliminar" style="padding: 5%;">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>


                       
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

<div id="dialog"></div>
<script>
    $('.AddUser').on('click', function () {
        @Url.Action("Create", "PlanDeCuentas", new { Area="Accounting"});
    });
</script>