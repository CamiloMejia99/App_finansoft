@model IEnumerable<FNTC.Finansoft.Accounting.DTO.MediosMagneticos.ConfigMedMag>

@using FNTC.Finansoft.Accounting.DTO.MediosMagneticos;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/sweetalert.min.js"></script>
<link href="~/Content/css/sweetalert.css" rel="stylesheet" />

<a href="/../Accounting/Informes/Index">
    <i id="arrowLeft" class="fa fa-arrow-circle-o-left fa-3x navArrows" aria-hidden="true" alt="left arrow" style="margin-left: -14px;
opacity: 0.5; display: block; color: rgb(17, 82, 143); z-index: 5; "></i>
</a>


<div class="col-md-12">
    <div class="col-md-12">
        <div class="form-group">
            <div class="col-md-10"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 123%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">CONFIGURACIÓN DE FORMATOS</h3></div>
            <div class="col-md-10"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 20%; color: #2B7785 !important; ">PASO 1</h3></div>
        </div>
    </div>
    <hr />
</div>


<div class="col-md-2 col-md-offset-8" style="display: inline-block; border: none; margin-left: 85%;">
    <a href="/MediosMagneticos/MMConfiguracion/CrearNuevaConfig" class="btn btn-primary btn-xs btnnuevo">Adicionar nuevo registro</a>
</div>
<div >
    <div id="menu1" class="tab-pane fade in active">
        
        <div class="col-md-12">

            <br />
            <div style="width:100%; margin:0 auto" class="tablecontainer">

                <table id="tablaCreditos" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-condensed">
                    <thead style="background-color:gray; color: white">
                        <tr>
                            <th>Cuenta Contable</th>
                            <th>Formato</th>
                            <th>Concepto</th>
                            <th>Categoria</th>
                            <th>Acumulado por</th>
                            <th>Eliminar</th>
                        </tr>
                    </thead>
                    <tbody style="background-color: white">
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @{var fullName = item.CuentaContable + " " + item.cuentmay.NOMBRE;}

                                    @Html.DisplayFor(modelItem => fullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.format.codigoFormato)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.concept.codigoConceptos)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.categori.descripcion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.acumuladop.nombre)
                                </td>
                                <td>
                                    @Html.ActionLink("Eliminar", "Eliminar", new { id = item.idConfigMedMag }, new { @class = "aElimina" })
                                   
                                </td>


                            </tr>
                        }

                    </tbody>


                </table>

                <div class="row">
                    <div align="left" >
                        <a align="left" href="/MediosMagneticos/MMConfiguracion/ListaRegistros" class="btn btn-success"> Ir a generación de formatos</a>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/modernizr")
@Scripts.Render("~/bundles/datatablesJs")
@Scripts.Render("~/bundles/swalJs")
@Scripts.Render("~/bundles/OtrosJs")


<link href="~/Content/css/jquery.dataTablesform.min.css" rel="stylesheet" />

@section scripts
{
    <script src="~/Scripts/jquery.dataTablesform.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#tablaCreditos').DataTable({
                "language": {
                    "url": "/Content/Spanish.json"
                }
            });
        });
    </script>


    <script>
        $(".aElimina").click(function (event) {
            if (!confirm('¿Esta seguro de eliminar este registro ?')) {
                event.preventDefault();
            }
        });
    </script>

   
}

