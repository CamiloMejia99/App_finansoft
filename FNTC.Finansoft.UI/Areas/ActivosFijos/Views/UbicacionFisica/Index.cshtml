@model IEnumerable<FNTC.Finansoft.Accounting.DTO.ActivosFijos.UbicacionFisica>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:1%; background: rgb(248, 248, 248);">
    <div class="col-md-12"><h2 style="color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Configuracion</h2></div>
    <ul class="col-md-offset-2 nav nav-tabs" style="margin-top:2%;border: none; margin-left: 2%;">

        <li><a href="/ActivosFijos/Grupos" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Grupos </a></li>
        <li><a href="/ActivosFijos/ClaseDeActivos" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Clases </a></li>
        <li class="active"><a href="/ActivosFijos/UbicacionFisica" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Ubicacion Fisica </a></li>
        <li><a href="/ActivosFijos/ActivosFijos" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Activos Fijos </a></li>


    </ul>
    <div class="tab-content contenedortabs">
        <div id="menu1" class="tab-pane fade in active">
            <div class="col-md-12"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 100%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Ubicaciones Fisicas</h3></div>

            <div class="col-md-12">
                <p>
                    @Html.ActionLink("Crear Nueva Ubicacion", "Create", null, null, new { @class = "btn btn-primary btn-large" })
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.codigo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nombre)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.codigo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nombre)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Edit", new { id = item.id }, new { @class = "btn btn-info btn-xs" })
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "btn btn-danger btn-xs" })
                            </td>
                        </tr>
                    }

                </table>

            </div>
        </div><!--MENU-->
    </div><!--CONTENEDOR TABS-->
</div>
