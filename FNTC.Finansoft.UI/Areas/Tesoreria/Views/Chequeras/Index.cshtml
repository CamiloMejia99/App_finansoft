@model IEnumerable<FNTC.Finansoft.Accounting.DTO.Tesoreria.TsorConsecutivosChequera>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:1%; background: rgb(248, 248, 248);">
    <div class="col-md-12"><h2 style="color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Tesoreria</h2></div>
    <ul class="col-md-offset-2 nav nav-tabs" style="margin-top:2%;border: none; margin-left: 2%;">
        <li><a href="/Tesoreria/Cheques" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Cheques </a></li>
        <li class="active"><a href="/Tesoreria/Chequeras" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Chequeras </a></li>
        <li><a href="/Tesoreria/Bancos" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Bancos </a></li>
        <li><a href="/Tesoreria/MatricularBanco" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Matricular Banco </a></li>
    </ul>
    <div class="tab-content contenedortabs">
        <div id="menu1" class="tab-pane fade in active">
            <div class="col-md-12"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 100%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Chequeras</h3></div>

            <div class="col-md-12">
                <p>
                    @Html.ActionLink("Crear Chequera", "Create", null, null, new { @class = "btn btn-primary btn-large" })
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.codigoBancoMatriculado)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.codigoChequera)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.estado)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.consecutivoInicial)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.consecutivoFinal)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.consecutivoActual)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.alertaChequesAgotados)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.numeroAlertaChequesAgotados)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.codigoBancoMatriculado)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.codigoChequera)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.estado)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.consecutivoInicial)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.consecutivoFinal)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.consecutivoActual)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.alertaChequesAgotados)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.numeroAlertaChequesAgotados)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.id })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div><!--MENU-->
    </div><!--CONTENEDOR TABS-->
</div>
