@model FNTC.Finansoft.Accounting.DTO.DescuentosNomina.DatosDiscriminacionPlanos

@{
    ViewBag.Title = "Gestión Planos - DESCUENTOS DE NOMINA";
    Layout = "~/Views/Shared/_Layoutcreditos.cshtml";
    var user = User.Identity.Name;
    var fecha = DateTime.Now;
    var total = Model.TotalAportes;
    var IdRelacPd = ViewBag.IdRelacionPDIn;
    var resultado = String.Format("{0:#,##0.00}", total);
    var plano = ViewBag.plano;
    var empresa = ViewBag.empresa;
    var Estado = Model.EstadoDisPlanoAsociado == true ? "Activo" : "Inhabilitado";



}

<script src="~/Scripts/sweetalert.min.js"></script>
<link href="~/Content/css/sweetalert.css" rel="stylesheet" />

<div class="container" style="margin-top:2%; background: rgb(248, 248, 248);">

    <ul class="col-md-offset-2 nav nav-tabs" style="margin-top:0%;border: none; margin-left: 2%;">
        <li class="active"><a href="#" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Detalles Asociado </a></li>

    </ul>
    <div class="tab-content contenedortabs">
        <div id="menu1" class="tab-pane fade in active">
            <div class="col-md-12"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 100%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Detalles Asociado - Detalles</h3></div>
            <div class="col-md-12">

                <div class="modal-body">
                    <form action="@Url.Action("EditarDetallesAsociados", "GestionPlanos")" method="post" id="frmEditarDetalles">
                        @Html.AntiForgeryToken()

                        <div class="form">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.IdDisPlanos)
                            <input id="modo" name="modo" hidden readonly />
                            <input value="@IdRelacPd" name="idEmpresaRelacion" hidden readonly />
                            <div class="row">
                                <div class="form-group col-md-2">
                                    <label class="control-label">Nit Asociado</label>

                                    <div class="input-group">
                                        <span class="input-group-addon">#</span>
                                        <input type="text" class="form-control" value="@Model.NitAsociado" readonly />
                                    </div>

                                </div>
                                <div class="form-group col-md-6">
                                    <label class="control-label">Nombre Asociado</label>

                                    <div class="input-group">
                                        <span class="input-group-addon">A - Z</span>
                                        <input type="text" class="form-control" value="@Model.NombreCompleto" readonly />
                                    </div>

                                </div>
                                <div class="form-group col-md-4">
                                    <label class="control-label">Total Descuento</label>

                                    <div class="input-group">
                                        <span class="input-group-addon">$</span>
                                        <input type="text" class="form-control miles" id="TotalResultados" name="TotalAportes" value="@resultado" readonly />

                                    </div>
                                </div>
                                <div class="form-group col-md-3">
                                    <label class="control-label">Primer Nombre</label>
                                    <div>
                                        <input type="text" class="form-control" value="@Model.PrimerNombre" readonly />

                                    </div>
                                </div>
                                <div class="form-group col-md-3">
                                    <label class="control-label">Segundo Nombre</label>
                                    <div>
                                        <input type="text" class="form-control" value="@Model.SegundoNombre" readonly />

                                    </div>
                                </div>
                                <div class="form-group col-md-3">
                                    <label class="control-label">Primer Apellido</label>
                                    <div>
                                        <input type="text" class="form-control" value="@Model.SegunoApellido" readonly />

                                    </div>
                                </div>
                                <div class="form-group col-md-3">
                                    <label class="control-label">Segundo Apellido</label>
                                    <div>
                                        <input type="text" class="form-control"  value="@Model.SegunoApellido" readonly />

                                    </div>
                                </div>
                                <div class="form-group col-md-3">
                                    <label class="control-label">Empresa</label>
                                    <div>
                                        <input type="text" class="form-control" value="@empresa" readonly />

                                    </div>
                                </div>
                                <div class="form-group col-md-3">
                                    <label class="control-label">Plano</label>
                                    <div>
                                        <input type="text" class="form-control" value="@plano" readonly />

                                    </div>
                                </div>
                                <div class="form-group col-md-2">
                                    <label class="control-label">Estado Asociado</label>
                                    <div>
                                        <input type="text" class="form-control" value="@Model.TipoDeEstadoProceso" readonly />

                                    </div>
                                </div>
                                <div class="form-group col-md-4">
                                    <label class="control-label">Periodo De Deduccion</label>
                                    <div>
                                        <input type="text" class="form-control" value="@Model.PeriodoDeduccion" readonly />

                                    </div>
                                </div>
                                <div class="form-group col-md-3">
                                    <label class="control-label">Fecha Inicial</label>
                                    <div>
                                        <input type="text" class="form-control" value="@Model.FechaInicial.ToString("dd/MM/yyyy")" readonly />

                                    </div>
                                </div>
                                <div class="form-group col-md-3">
                                    <label class="control-label">Fecha Final</label>
                                    <div>
                                        <input type="text" class="form-control"  value="@Model.FechaFinal.ToString("dd/MM/yyyy")" readonly />

                                    </div>
                                </div>
                                <div class="form-group col-md-3">
                                    <label class="control-label">Estado</label>
                                    <div>
                                        <input type="text" class="form-control"  value="@Estado" readonly />

                                    </div>
                                </div>

                                <div class="form-group col-md-3">
                                    <label class="control-label">Estado Contable</label>
                                    <div>
                                        <input type="text" class="form-control" value="@Model.EstadoContable" readonly />

                                    </div>
                                </div>
                             
                              
                                <div class="form-group col-md-6">
                                    <label class="control-label">Fecha - Ultima Modificacion</label>
                                    <div>
                                        <input type="text" class="form-control" value="@Model.FechaCreacion.ToString("dd/MM/yyyy")" autocomplete="off" readonly />
                                    </div>
                                </div>

                                <div class="form-group col-md-6">
                                    <label class="control-label">User Control</label>
                                    <div>
                                        <input type="text" class="form-control" id="UserControl" name="UserControl" value="@Model.UserControl" readonly />

                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="modal-footer">
                                    <a class="btn btn-primary" href="@Url.Action("DetallesDiscriminacion", "GestionPlanos", new { idRelacionPD = IdRelacPd })">Retornar</a>
                                
                                </div>
                            </div>

                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>



