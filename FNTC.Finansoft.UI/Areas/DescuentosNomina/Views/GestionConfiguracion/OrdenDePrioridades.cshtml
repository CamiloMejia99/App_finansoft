
@model IEnumerable<FNTC.Finansoft.Accounting.DTO.DescuentosNomina.OrdenDePrioridadPagos>

@{
    ViewBag.Title = "Gestión & Configuración - DESCUENTOS DE NOMINA";
    Layout = "~/Views/Shared/_Layoutcreditos.cshtml";
    <link href="//cdn.datatables.net/1.12.0/css/jquery.dataTables.min.css" rel="stylesheet" />


}

<script src="~/Scripts/sweetalert.min.js"></script>
<link href="~/Content/css/sweetalert.css" rel="stylesheet" />
<div class="container" style="margin-top:1%; background: rgb(248, 248, 248);">

    <ul class="col-md-offset-2 nav nav-tabs" style="margin-top:0%;border: none; margin-left: 2%;">
        <li class="active"><a href="#" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Orden De Prioridades </a></li>
        <li><a href="/DescuentosNomina/GestionConfiguracion/ContraPartida" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Contra Partida </a></li>
        <li><a href="/DescuentosNomina/GestionConfiguracion/SaldosSobrantes" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Saldos Sobrantes </a></li>
        
    </ul>
    <div class="tab-content contenedortabs">
        <div id="menu1" class="tab-pane fade in active">
            <div class="col-md-12"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 100%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Configuración - Orden De Prioridades</h3></div>
            <div class="col-md-12">
                <div class="col m-5">
                    <a href="/DescuentosNomina/GestionConfiguracion/CrearNuevaCuenta" class="btn btn-primary" data-toggle="modal">
                        Agregar - Nueva Cuenta
                    </a>
                    <a href="/DescuentosNomina/GestionConfiguracion/ClasificacionPagos" class="btn btn-default" data-toggle="modal">
                        Clasificacion Pagos
                    </a>
                </div>
                <br />
                <div style="width:100%; margin:0 auto" class="tablecontainer">
                    <table data-order='[[ 4, "asc" ]]' id="PrioridNomi" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-condensed">
                        <thead>
                            <tr>

                                <th>Cuenta</th>
                                <th>Nombre Cuenta</th>
                                <th>Descripcion Pago</th>
                                <th>Nombre Pago</th>
                                <th>Orden</th>
                                <th>Detalles & Actualizacion</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.CodigoCuenta
                                    </td>
                                    <td>
                                        @item.cuentaMayor.NOMBRE
                                    </td>
                                    <td>
                                        @item.DescripcionPagos
                                    </td>
                                    
                                    <td>
                                        @item.tipoPagos.NombrePago
                                    </td>
                                    <td>
                                        @item.tipoPagos.Orden
                                    </td>

                                    <td>
                                        <a class="btn btn-primary btn-xs" title="Editar" href="@Url.Action("EditarCuenta", "GestionConfiguracion", new { id = item.IdOrdenPrioridadPagos })">
                                            <i class="glyphicon glyphicon-edit"></i>
                                        </a>
                                        <a class="btn btn-info btn-xs" title="Detalles" href="@Url.Action("DetallesOrden", "GestionConfiguracion", new { id = item.IdOrdenPrioridadPagos })">
                                            <i class="glyphicon glyphicon-search"></i>
                                        </a>
                                        <a class="btn btn-danger btn-xs" onclick="location.href='../GestionConfiguracion/EliminarOrden?id=@item.IdOrdenPrioridadPagos'" title="Eliminar">
                                            <i class="glyphicon glyphicon-remove"></i>
                                        </a>

                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <a href="/DescuentosNomina/InicioDescuentosNomina/ModulosDescuentosNomina" class="btn btn-primary" data-toggle="modal">
                    Retornar
                </a>

            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="//cdn.datatables.net/1.12.0/js/jquery.dataTables.min.js"></script>


    <script>
        $('#PrioridNomi').DataTable({
            "language": {
                "url": "/Content/Spanish.json"
            },
            "pageLength": 10,
            lengthMenu: [10, 20, 50],
        });


    </script>
}
