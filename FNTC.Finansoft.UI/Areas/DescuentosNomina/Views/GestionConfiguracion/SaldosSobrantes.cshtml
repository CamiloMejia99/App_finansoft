
@model IEnumerable<FNTC.Finansoft.Accounting.DTO.DescuentosNomina.SaldosSobrantes>

@{
    ViewBag.Title = "Gestión & Configuración - DESCUENTOS DE NOMINA";
    Layout = "~/Views/Shared/_Layoutcreditos.cshtml";
    <link href="//cdn.datatables.net/1.12.0/css/jquery.dataTables.min.css" rel="stylesheet" />


}

<script src="~/Scripts/sweetalert.min.js"></script>
<link href="~/Content/css/sweetalert.css" rel="stylesheet" />
<div class="container" style="margin-top:1%; background: rgb(248, 248, 248);">

    <ul class="col-md-offset-2 nav nav-tabs" style="margin-top:0%;border: none; margin-left: 2%;">

        <li><a href="/DescuentosNomina/GestionConfiguracion/OrdenDePrioridades" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Orden De Prioridades </a></li>
        <li><a href="/DescuentosNomina/GestionConfiguracion/ContraPartida" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Contra Partida </a></li>
        <li class="active"><a href="#" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Saldos Sobrantes </a></li>

    </ul>
    <div class="tab-content contenedortabs">
        <div id="menu1" class="tab-pane fade in active">
            <div class="col-md-12"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 100%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Configuración - Saldos Sobrantes</h3></div>
            <div class="col-md-12">
                <div class="col m-5">
                    <a href="/DescuentosNomina/GestionConfiguracion/CrearSaldosSobrantes" class="btn btn-primary" data-toggle="modal">
                        Actualizar - Cuenta
                    </a>
                </div>
                <br />
                <div style="width:100%; margin:0 auto" class="tablecontainer">
                    <table data-order='[[ 3, "asc" ]]' id="PrioridNomi" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-condensed">
                        <thead>
                            <tr>

                                <th>Cuenta</th>
                                <th>Nombre Cuenta</th>
                                <th>Fecha Actualizacion</th>
                                <th>Estado</th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.CodigoCuenta
                                    </td>
                                    <td>
                                        @item.CuentaFK.NOMBRE
                                    </td>
                                    <td>
                                        @item.FechaCreacion
                                    </td>
                                    <td>
                                        @if (@item.Estado == true)
                                        {


                                            <label>ACTIVO</label>
                                        }
                                        else
                                        {
                                            <label>Inactivo</label>
                                        }
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <a href="/DescuentosNomina/InicioDescuentosNomina/ModulosDescuentosNomina" class="btn btn-primary" data-toggle="modal">
                    Retornar
                </a>

            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="//cdn.datatables.net/1.12.0/js/jquery.dataTables.min.js"></script>


    <script>
        $('#PrioridNomi').DataTable({
            "language": {
                "url": "/Content/Spanish.json"
            },
            "pageLength": 5,
            lengthMenu: [5, 10, 20, 50],
        });


    </script>
}
