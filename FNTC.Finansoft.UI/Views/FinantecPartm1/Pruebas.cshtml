            , data: { "term": t }
            , success: function (result) {

                $("#log").empty();
                var ul = $('<ul>').appendTo("#log");
                $(result).each(function (index, item) {
                    ul.append($(document.createElement('li')).text("Cuenta :" + item.CODIGO))
