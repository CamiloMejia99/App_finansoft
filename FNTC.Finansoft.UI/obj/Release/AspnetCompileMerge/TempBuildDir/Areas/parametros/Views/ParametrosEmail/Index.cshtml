@model IEnumerable<FNTC.Finansoft.Accounting.DTO.Email.ConfiguracionCorreo>
@{
    Layout = "~/Views/Shared/_Layoutahorros.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <meta name="viewport" content="width=device-width">
    <script src="~/Scripts/jquery2-1-4.min.js"></script>
    <script src="~/Scripts/sweetalert2@9.js"></script>
</head>
<body>
    <div class="container" style="margin-top:2%; background: rgb(248, 248, 248);">
        <div class="page-content" style="padding-bottom: 10px;">
            <div>
                <div class="row">
                    <div class="col-lg-12">

                        <div class="col-lg-12">
                            <div class="form-group">

                                <h3 class="site-title">
                                    Correo Parametrizado en sistema
                                </h3>
                                <hr />

                                <div class="col m-5">
                                    @*<a href="#" class="btn btn-info" data-toggle="modal">
                                        Cambiar Contraseña
                                    </a>*@
                                    <a href="/parametros/ParametrosEmail/CrearEmail" class="btn btn-info">
                                        Nuevo Correo
                                    </a>
                                    <br />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>

            <div class="row" style="align-content:center">

                <div class="col-md-12">
                    <div class="form-group">
                        <table id="dynamic-tableUsers" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        Correo
                                    </th>
                                    <th>
                                        Servicio | SMTP
                                    </th>
                                    <th>
                                        Puerto
                                    </th>
                                    <th>
                                        Estado
                                    </th>
                                    <th>
                                        Cambiar Parametrizacion
                                    </th>
                                    @*<th></th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.email)
                                    </td>

                                    <td>
                                        @if (item.smtp == "smtp.office365.com")
                                        {
                                            <span>OUTLOOK 365 (HOTMAIL)</span>
                                        }
                                        else if (item.smtp == "smtp.gmail.com")
                                        {
                                            <span>GMAIL</span>
                                        }

                                        @*@Html.DisplayFor(modelItem => item.SmtpClient)*@
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.puerto)
                                    </td>
                                    <td>
                                        @if (item.estado == "1")
                                        {
                                            <span>Activo</span>
                                        }
                                        else
                                        {
                                            <span>No Activo</span>
                                        }
                                        @*@Html.DisplayFor(modelItem => item.Estado)*@
                                    </td>
                                    <td>
                                        @Html.ActionLink("Cambiar","EditarEmail", new { id = item.id_email})
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

