@model IEnumerable<FNTC.Finansoft.Accounting.DTO.FormularioRetiro.BFormularioRetiro>

@{
    Layout = "~/Views/Shared/_Layoutahorros.cshtml";
}
<script src="~/Scripts/sweetalert2@9.js"></script>
<div class="col-md-12" style="background: rgb(248, 248, 248); width:1300px;left: 80px;">

    <div class="form-group">
        <div class="col-md-8"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 1250px; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Formularios de Asociados Retirados</h3></div>
        <div class="col-md-2" style=" margin-top:35px;">
            <a class="" href="/Aportes/Aportes/Index" title="Atras">
                <i class="fa fa-arrow-circle-o-left fa-2x " aria-hidden="true">Volver</i>
            </a>

        </div><div class="col-md-2" style=" margin-top:35px;">
            <a href="/FormularioRetiro/FormularioRetiro/Create" class="AddUser btn btn-success btn-small btnnuevo">Nuevo Formulario</a>
        </div>

    </div>
    <div class="form-group">
        <div style="width:1250px">
            <table id="myTable" class="table table-striped table-bordered dataTable no-border">
                <thead style="background-color:lightslategray">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nit)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.telefono)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.celular)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ciudad)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.correo)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="align-center medium">
                            <td>
                                @Html.DisplayFor(modelItem => item.nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nit)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.telefono)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.celular)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ciudad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.correo)
                            </td>


                            <td class="align-center">
                                <a id="editar" class="btn btn-inline btn-xs btn-primary" href="/FormularioRetiro/FormularioRetiro/Edit?id=@item.id" title="Editar">
                                    <i class="fa fa-pencil" aria-hidden="true"></i>
                                </a> &nbsp;&nbsp;
                                <a id="editar" class="btn btn-inline btn-xs btn-success" href="/FormularioRetiro/FormularioRetiro/Details?id=@item.id" title="Editar">
                                    <i class="fa fa-eye" aria-hidden="true"></i>
                                </a>
                                <button class="btn btn-inline btn-xs btn-danger DeleteForAsoRe" value="@item.id" title="Eliminar">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>


            </table>

        </div>
    </div>
</div>



<link href="~/Content/css/jquery.dataTablesform.min.css" rel="stylesheet" />
@section scripts
{
    <script src="~/Scripts/FormularioRetiro.js"></script>
    <script src="~/Scripts/jquery.dataTablesform.min.js"></script>
    
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "language": {
                    "url": "/Content/Spanish.json"
                }
            });
        });
    </script>
}