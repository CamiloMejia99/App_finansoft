@model IEnumerable<FNTC.Finansoft.Accounting.DTO.Nomina.SeleccionCuenta>


    
<div class="modal-body">
    <div class="col-md-2" style="  margin-left: 88%;">
        <button class="btn btn-success" onclick=" $('#divmodal').load('@Url.Action("Create","SeleccionCuentas",new { })')">Añadir cuenta</button>
    </div>
    <table class="table table-striped table-bordered dataTable no-footer" style="background-color: #FFF;">
        <tr>
            <th class="columnatablaazul2">
                @Html.DisplayNameFor(model => model.CODIGO)
            </th>

            <th class="columnatablaazul2">
                @Html.DisplayNameFor(model => model.Cuenta.NOMBRE)
            </th>
            <th class="columnatablaazul2">
                @Html.DisplayNameFor(model => model.TIPOCUENTA)
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CODIGO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cuenta.NOMBRE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TIPOCUENTA)
                </td>

                <td>
                    <button class="editartablas" onclick=" $('#divmodal').load('@Url.Action("Edit","SeleccionCuentas",new { id=item.ID})')"><i class="fa fa-pencil" aria-hidden="true"></i></button> 
                </td>
                <td>
                        <button class="eliminartablas" onclick=" $('#divmodal').load('@Url.Action("Delete","SeleccionCuentas",new { id=item.ID })')"><i class="fa fa-trash" aria-hidden="true"></i></button>
                </td>

            </tr>
        }

    </table>

</div>
