</script>
<script>
        function Actualizar() {

            var Asociado = $("#IDASOCIADO").val();

                    if (Asociado != "") {
                        $('#mitabla tr').empty();
                        $.ajax({
                            type: "POST",
                            url: "@Url.Action("GetDatosActualizar", "CorreccionNominas")",
                            datatype: "Json",
                            data: { NIT: $('#IDASOCIADO').val(), TotalI: $("#TotalI").val()},
                            success: function (data) {
                                $("#TotalN").text(data[0]);
                                $("#TotalI").val("");
                            }
                        });
                    }

                    else {
                        $('#IDASOCIADO').val("").trigger('chosen:updated');
                        swal({
                            title: "Alerta",
