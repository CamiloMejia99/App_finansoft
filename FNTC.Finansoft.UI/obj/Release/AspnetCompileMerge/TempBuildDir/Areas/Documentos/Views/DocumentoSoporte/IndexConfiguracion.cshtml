@model IEnumerable<FNTC.Finansoft.Accounting.DTO.Documentos.ConfigDocumentoSoporte>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Configuración";
}



@section Styles{
    <link href="~/Content/css/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/css/chosen.css" rel="stylesheet" />

}


<link href="~/Content/css/buttons.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.buttons.min.js"></script>
<script src="~/Scripts/buttons.flash.min.js"></script>
<script src="~/Scripts/jszip.min.js"></script>
<script src="~/Scripts/pdfmake.min.js"></script>
<script src="~/Scripts/vfs_fonts.js"></script>
<script src="~/Scripts/buttons.html5.min.js"></script>
<script src="~/Scripts/buttons.print.min.js"></script>
<script src="~/Scripts/sweetalert2@10.js"></script>



<div class="col-md-12" style="background:#ECECEC; width:100%;left: 10px;">
    <br />
    <ul class="col-md-offset-2 nav nav-tabs" style="margin-top:0%;border: none; margin-left: 2%;">
        <li class="active"><a href="/Documentos/DocumentoSoporte/IndexConfiguracion" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Configuración </a></li>
        <li><a href="/Documentos/DocumentoSoporte/Index" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> DocumentosSoporte </a></li>
    </ul>
    <div class="tab-content contenedortabs">
        <div class="row" style="margin-top:0.5%;margin-left:auto;margin-right:auto">
            <div class="col-lg-offset-10 col-lg-2 col-sm-12">
                <a href="/Dashboard/Default"><i class="fa fa-arrow-circle-left fa-lg" aria-hidden="true">Salir al menú</i></a>
            </div>

        </div>
        <div class="card" style="background-color:white;margin-left:10px;margin-right:10px;">
            <div class="card-header" style="background-color:#274766;color:white;border-radius:5px;">
                Configuración
            </div>
            <div class="card-body" style="background-color:white;margin-left:10px;margin-right:10px">
                <br />
                <div class="row">
                    <div style="width:90%;margin-left:auto;margin-right:auto">
                        <button id="btnAgregar" class="btn btn-success">Agregar Configuración</button>
                        <table id="tabla1" cellpadding="0" cellspacing="0" border="0" class="table table-responsive table-bordered">
                            <thead style="background-color:#274766;color:white">
                                <tr>
                                    <th>TIPO DOCUMENTO SOPORTE</th>
                                    <th>PREFIJO</th>
                                    <th>N° DOCUMENTO</th>
                                    <th>FECHA EMISIÓN</th>
                                    <th>VIGENCIA(meses)</th>
                                    <th>RANGO DESDE</th>
                                    <th>RANGO HASTA</th>
                                    <th width="10%">Opciones</th>
                                </tr>
                            </thead>
                            <tbody style="background-color:#e4e4e4;color:black">
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <th>@Html.DisplayFor(modelItem => item.tipoComprobanteFK.NOMBRE)&nbsp;@Html.DisplayFor(modelItem => item.tipoComprobanteFK.CODIGO)</th>
                                    <th>@Html.DisplayFor(modelItem => item.prefijo)</th>
                                    <th>@Html.DisplayFor(modelItem => item.numDocumento)</th>
                                    <th>@(String.Format("{0:dd/MM/yyyy}",item.fechaEmision))</th>
                                    <th>@Html.DisplayFor(modelItem => item.vigencia)</th>
                                    <th>@Html.DisplayFor(modelItem => item.rangoDesde)</th>
                                    <th>@Html.DisplayFor(modelItem => item.rangoHasta)</th>
                                    <th>
                                        <a id="btnEditar" class="btn btn-inline btn-xs btn-primary" href="/Documentos/DocumentoSoporte/EditConfiguracion?id=@item.id" title="Editar">
                                            <i class="fa fa-pencil" aria-hidden="true"></i>
                                        </a>
                                    </th>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <br />
            </div>
        </div>
        <br />
    </div>
    <br />
</div>
@*@Html.Partial("Modal_Contexto")*@
@section scripts
{

    <script src="~/Scripts/Documentos/DocumentoSoporte/IndexConfiguracion.js"></script>

}
