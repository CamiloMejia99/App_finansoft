    <div class="tab-content contenedortabs">
        <div id="menu1" class="tab-pane fade in active">
            <div class="col-md-12"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 100%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Lineas</h3></div>

            <div class="col-md-12">


                @using (Html.BeginForm("exportar", "ReporteSuper", FormMethod.Post))
                {

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    REPORTE SUPERSOLIDARIA
                                </div>
                                <div class="panel-body">
                                    <div class="row">
                                        @Html.ValidationSummary(true)

                                        <div class="row">
                                            <div class="col-lg-12 container">

                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label class="col-md-10">FECHA INICIAL</label>

                                                        <div class="col-md-8">
                                                            <div class='input-group date' id='datetimepicker6'>
                                                                @Html.TextBox("FI", null, new { @class = "form-control", required = "required" })

                                                                <span class="input-group-addon">
                                                                    <span class="glyphicon glyphicon-calendar"></span>
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label class="col-md-10">FECHA FINAL</label>
                                                        <div class="col-md-8">
                                                            <div class='input-group date' id='datetimepicker7'>
                                                                @Html.TextBox("FF", null, new { @class = "form-control", required = "required" })

                                                                <span class="input-group-addon">
                                                                    <span class="glyphicon glyphicon-calendar"></span>
                                                                </span>
                                                            </div>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                        <br />
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="col-lg-6">
                                                    <div class="form-group">

                                                        <div class="col-md-8">



                                                            <input type="submit" id="exportar" class="exportar btn btn-success" value="Exportar">


                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                }


            </div>
        </div><!--MENU-->
    </div><!--CONTENEDOR TABS-->
</div>


@section Scripts
    {

    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.js"></script>
    <script src="~/Scripts/espanol.js"></script>
    <script>

        $(document).ready(function () {
            $("#datetimepicker6").datetimepicker(
                {

                    showTodayButton: true,
                    format: 'DD/MM/YYYY',
                    showClose: true,
                    showClear: true,
                    toolbarPlacement: 'top',
                    stepping: 15,
                    locale: 'es',

                });
            $("#datetimepicker7").datetimepicker(
                {

                    showTodayButton: true,
                    format: 'DD/MM/YYYY',
                    showClose: true,
                    showClear: true,
                    toolbarPlacement: 'top',
                    stepping: 15,
                    locale: 'es',

                });
            $("#datetimepicker6").on("dp.change", function (e) {
                $('#datetimepicker7').data("DateTimePicker").minDate(e.date);
            });
            $("#datetimepicker7").on("dp.change", function (e) {
                $('#datetimepicker6').data("DateTimePicker").maxDate(e.date);
            });

        });

    </script>
    <script>
        //INCOMPLETO
        $('#vistap').click(function () {

            var Finicial = $('#FI').val();
            var Ffinal = $('#FF').val();
            alert(Finicial);
            $.ajax({
                type: "POST",
                //url: "/Costos_Adicionales/GetStatesByCountryId",
                url: "@Url.Action("Previa", "ReporteSuper")",
                //contentType: "text",
                dataType: 'binary',
                data: { FI: Finicial, FF: Ffinal }
                //,

                //success: function (data) {

                //}
            })


        })

    </script>
}


















