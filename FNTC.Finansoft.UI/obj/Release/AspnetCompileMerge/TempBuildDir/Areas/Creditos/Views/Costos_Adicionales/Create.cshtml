                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CA_Nombre, new { @class = "control-label col-md-10" })
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(model => model.CA_Nombre, new { @id = "Nombre", @class = "form-control" })
