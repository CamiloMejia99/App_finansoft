<div>
    @Html.ActionLink("Regresar a la Lista", "Index")
</div>

@section Scripts {

    @*choseen*@

    <script src="~/Scripts/chosen.jquery.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $(".chosen-select-single").chosen();
            $(".chosen-select-multiple").chosen();

        });
    </script>

    <script>

        //$(function () {
        $(document).ready(function () {
            $('#Guardar').click(function () {
                var valor = $('#Valor').val();
                var porcentaje = $('#CA_Porcentaje').val();
                if (valor == 0 || valor == null) {
                    $('#Valor').val(0);

                }
                else if (porcentaje == 0 || porcentaje == null) {
                    $('#CA_Porcentaje').val(0);
                }
            })

            $('#Lineas_Id').change(function () {

                $('#Destino_Id').empty();

                $.ajax({
                    type: "POST",
                    //url: "/Costos_Adicionales/GetStatesByCountryId",
                    url: "@Url.Action("GetStatesByCountryId", "Costos_Adicionales")",
                    datatype: "Json",
                    data: { countryId: $('#Lineas_Id').val() },
                    success: function (data) {
                        $.each(data, function (index, value) {

                            $('#Destino_Id').append('<option value="' + value.Value + '">' + value.Text + '</option>');
                        });

                    }
                });
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $('#Valor').prop('readonly', true);
            $('#CA_Porcentaje').prop('readonly', true);

            $('#Tipo_Costo_Id').change(function () {

                var valor = $('#Tipo_Costo_Id').val();


                if (valor == 2) {


                    $('#Valor').prop('readonly', true);
                    $("#Valor").val('0');
                    $('#CA_Porcentaje').prop('readonly', false);

                } else if (valor == 3) {
                    $('#Valor').prop('readonly', true);
                    $('#CA_Porcentaje').prop('readonly', false);
                }
                else if
                (valor == 1) {
                    $('#Valor').prop('readonly', false);

                    $('#CA_Porcentaje').prop('readonly', true);
                    $("#CA_Porcentaje").val('0');
                }

            })
        });
    </script>
    <script>
        /* SEPARADOR DE MILES POR KEY UP */
        $(document).ready(function () {
            $("#Valor").on({
                "focus": function (event) {
                    $(event.target).select();
                },
                "keyup": function (event) {
                    $(event.target).val(function (index, value) {
                        return value.replace(/\D/g, "")
                            .replace(/([0-9])([0-9]{3})$/, '$1,$2')
                            .replace(/\B(?=(\d{3})+(?!\d)\.?)/g, ",");
                    });
                }
            });
        });
            /*FIN SEPARADOR DE MILES POR KEY UP*/
    </script>
}