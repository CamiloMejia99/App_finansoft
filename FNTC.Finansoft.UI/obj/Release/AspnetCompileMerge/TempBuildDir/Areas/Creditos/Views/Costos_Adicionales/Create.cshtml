                                        @Html.LabelFor(model => model.Tipo_Costo_Id, new { @class = "control-label col-md-10" })
                                        <div class="col-md-10">
                                            @Html.DropDownList("Tipo_Costo_Id", null, new { @class = "chosen-select-single" })

                                        </div>
                                    </div>
                                </div>

