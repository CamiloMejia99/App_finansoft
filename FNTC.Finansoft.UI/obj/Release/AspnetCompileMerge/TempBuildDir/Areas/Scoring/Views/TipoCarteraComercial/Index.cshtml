@model IEnumerable<FNTC.Finansoft.Accounting.DTO.Scoring.ScoringTipoCarteraComercial>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>


    <div class="container" style="margin-top:1%; background: rgb(248, 248, 248);">
        <div class="col-md-12"><h2 style="color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Tipos de Carteras</h2></div>
        <ul class="col-md-offset-2 nav nav-tabs" style="margin-top:2%;border: none; margin-left: 2%;">
            
            <li><a href="/Scoring/TipoCarteraConsumo" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Consumo </a></li>
            <li class="active"><a href="/Scoring/TipoCarteraComercial" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i>Comercial</a></li>
            <li><a href="/Scoring/TipoCarteraVivienda" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Vivienda </a></li>
            <li><a href="/Scoring/TipoCarteraMicrocreditos" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Microcrédito</a></li>


        </ul>
        <div class="tab-content contenedortabs">
            <div id="menu1" class="tab-pane fade in active">
                <div class="col-md-12"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 100%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Tipo de Cartera Comercial</h3></div>

                <div class="col-md-12">
                    <div class="row">

                        <div class="col-lg-12">

                            <div class="panel-body">
                                <div class="row">
                                    @Html.ValidationSummary(true)


                                    <table class="table">
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Categoria)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.NroDias)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.PorcentajeProvision)
                                            </th>
                                            <th></th>
                                        </tr>

                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Categoria)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NroDias)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PorcentajeProvision)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Editar", "Edit", new { id = item.id }, new { @class = "btn btn-info btn-xs" })
                                            </td>
                                        </tr>
                                        }

                                    </table>

                                </div>
                            </div>


                        </div>
                    </div>
                    <div>
                        @Html.ActionLink("Regresar a la Lista", "../Scoring/")
                    </div>
                    <br />
                    <br />
                    <br />
                </div>

            </div>
        </div><!--MENU-->
    </div>


</body>
</html>
