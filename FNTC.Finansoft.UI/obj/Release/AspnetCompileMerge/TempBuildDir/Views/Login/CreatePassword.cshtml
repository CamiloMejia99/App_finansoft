@model  IdentitySample.Models.RegisterUserViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<head>
    <link rel="stylesheet" href="/Content/assets/css/ace.css" class="ace-main-stylesheet" id="main-ace-style" />
    <script src="~/Scripts/VirtualKeyboard/keyboard.js"></script>
    <link href="~/Scripts/VirtualKeyboard/keyboard.css" rel="stylesheet" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="Description" content="Software financiero para Medianas y Grandes empresas">
    <meta name="keywords" content="Software financiero, contabilidad">
    <link rel="icon" type="image/ico" href="">
    <meta name="viewport" content="width=1024,initial-scale=1.00, minimum-scale=1.00">
    <title>FinanSoft</title>
    <link href="~/Scripts/VirtualKeyboard/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.11.0.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/css/compressed2.css" rel="stylesheet" />
    <link href="~/Content/css/styleGeneral.css" rel="stylesheet" />
</head>
<style>
    /*.login-container {
        width: 400px;
        margin: 0 auto;
    }*/

    .forgot-box .toolbar {
        background: #5075c1;
        border-top: 2px solid #5075c1;
        padding: 9px 18px;
    }

    .forgot-box .back-to-login-link, .signup-box .back-to-login-link {
        color: #FE9;
        font-size: 14px;
        font-weight: normal;
        text-shadow: 1px 0px 1px rgba(0, 0, 0, 0.25);
    }

    .widget-main {
        padding-left: 12px;
        padding-right: 12px;
        border-width: 1px;
        border-style: solid;
        border-color: #b5b5b5;
    }

    body {
        background-color: #fff;
        min-height: 100%;
        padding-bottom: 0;
        font-family: 'Open Sans';
        font-size: 13px;
        color: #393939;
        line-height: 1.5;
    }

    .forget-pwd > a {
        color: #dc3545;
        font-weight: 500;
    }

    .forget-password .panel-default {
        padding: 31%;
        margin-top: -27%;
    }

    .forget-password .panel-body {
        padding: 15%;
        margin-bottom: -50%;
        background: #fff;
        border-radius: 5px;
        -webkit-box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }

    /*img {
        width: 40%;
        margin-bottom: 10%;
    }*/

    
</style>
<div id="headerWrapper">
    <div id="headerCenter">
        <div id="headerTitles">
            <a href="">
                <img style="margin-top: 10px !important;" src="~/Content/imagenes/logof.png" />
            </a>
        </div>
    </div>
</div>

<div class="page-content">
    
    @using (Html.BeginForm("CreatePassword", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

    
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Code)

        


        <div class="container forget-password">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="text-center">
                                <div class="row center">
                                    <img src="https://i.ibb.co/rshckyB/car-key.png" alt="car-key" border="0">
                                    <h4 class="text-center">Puedes restablecer tu contraseña aquí</h4>
                                </div>
                                <div class="row center col-lg-12">
                                    <div class="row">
                                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Correo", @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @style = "color:red" })
                                    </div>
                                    <br />
                                    <div class="row">
                                        @Html.PasswordFor(m => m.Password, new { placeholder = "Contraseña", @class = "form-control keyboardInput" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @style = "color:red" })
                                    </div>
                                    <br />
                                    <div class="row">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirmar contraseña", @class = "form-control keyboardInput" })
                                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @style = "color:red" })
                                    </div>
                                    <br />
                                    <div class="row">
                                        <button type="submit" class="btn btn-sm btn-primary">
                                            <i class="ace-icon fa fa-envelope-o"></i>
                                            Restablecer contraseña
                                        </button>
                                    </div>

                                </div>
                              
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>