<style>
    .login-container {
        width: 400px;
        margin: 0 auto;
    }

    .forgot-box .toolbar {
        background: #5075c1;
        border-top: 2px solid #5075c1;
        padding: 9px 18px;
    }

    .forgot-box .back-to-login-link, .signup-box .back-to-login-link {
        color: #FE9;
        font-size: 14px;
        font-weight: normal;
        text-shadow: 1px 0px 1px rgba(0, 0, 0, 0.25);
    }

    .widget-main {
        padding-left: 12px;
        padding-right: 12px;
        border-width: 1px;
        border-style: solid;
        border-color: #b5b5b5;
    }

    body {
        background-color: #fff;
        min-height: 100%;
        padding-bottom: 0;
        font-family: 'Open Sans';
        font-size: 13px;
        color: #393939;
        line-height: 1.5;
    }
</style>
<div class="modal-dialog modal-md">
    <div class="modal-content">
        <div class="modal-header">
            Finansoft
        </div>
        <div class="modal-body">
           
            <div class="login-container">
         
                <div id="forgot-box" class="forgot-box widget-box no-border visible">
                    <div class="widget-body">
                        <div class="widget-main">
                            <h4 class="header blue lighter bigger">
                                <i class="ace-icon fa fa-user"></i>
                                Restablecer Contraseña  
                            </h4>
                            <div class="space-6"></div>
                            <p style="color:#666; font-size:11px;">
                                Ingrese su correo electrónico registrado con nosotros, le enviaremos instrucciones para crear su contraseña.
                            </p>
                            @using (Html.BeginForm("RegisterPassword", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                <fieldset>
                                    <label class="block clearfix">
                                        <span class="block input-icon input-icon-right">
                                            <input class="form-control" placeholder="Correo electrónico" type="email" id="Email" name="Email">
                                            <i class="ace-icon fa fa-envelope"></i>
                                        </span>
                                    </label>
                                    <div class="space-10"></div>
                                    <div class="clearfix">
                                        <a href="#" class="btn btn-danger pull-left" data-dismiss="modal">Cancelar</a>
                                        <button type="submit" id="enviar" class="pull-right btn btn-sm btn-primary">
                                            <i class="ace-icon fa fa-envelope-o"></i>
                                            <span class="bigger-110">Enviar</span>
                                        </button>
                                    </div>
                                </fieldset>
                            }
                        </div><!-- /.widget-main -->
                       
                            
                        </div>
                    </div><!-- /.widget-body -->
                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('#enviar').click(function () {
            if ($("#Email").val().indexOf('@@', 0) == -1 || $("#Email").val().indexOf('.', 0) == -1) {
                swal({
                    title: "Error",
                    text: "Correo Electrónico No Válido!!",
                    type: "error"
                });
                return false;
            }


        });
    });
</script>







