@model FNTC.Finansoft.Accounting.DTO.Email.ConfiguracionCorreo
@{
    Layout = "~/Views/Shared/_Layoutahorros.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CrearEmail</title>
    <meta name="viewport" content="width=device-width">
    <script src="~/Scripts/sweetalert.min.js"></script>
    <link href="~/Content/css/sweetalert.css" rel="stylesheet" />
    <link href="~/Content/css/chosen.css" rel="stylesheet" />

</head>
<body>
    @*@using (Html.BeginForm())
        {*@
    @using (Html.BeginForm("CrearEmail", "ParametrosEmail", new { area = "parametros" }, FormMethod.Post, new { id = "theForm" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="container" style="margin-top:2%; background: rgb(248, 248, 248);">
            <h2>Correo Electronico</h2>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <label class="col-md-6">Correo Electronico</label>
                    @Html.EditorFor(modelo => modelo.email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(modelo => modelo.email, "", new { @style = "color:red" })
                </div>
                <div class="col-md-6">
                    <label class="col-md-6">Contraseña</label>
                    @Html.EditorFor(modelo => modelo.password, new { htmlAttributes = new { @class = "form-control", Type = "password" } })
                    @Html.ValidationMessageFor(modelo => modelo.password, "", new { @style = "color:red" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-3">
                    <label class="col-md-3">Gmail</label>
                    @Html.RadioButtonFor(model => model.smtp, "smtp.gmail.com", new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    <label class="col-md-6">Hotmail</label>
                    @Html.RadioButtonFor(model => model.smtp, "smtp.office365.com", new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    <label class="col-md-3">*Activo</label>
                    @Html.RadioButtonFor(model => model.estado, "1", new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    <label class="col-md-6">*No Activo</label>
                    @Html.RadioButtonFor(model => model.estado, "0", new { @class = "form-control" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    @*<label class="col-md-6">Correo Electronico</label>*@
                    @Html.EditorFor(modelo => modelo.puerto, "587", new { htmlAttributes = new { @class = "form-control", @Value = 587, @style = "display: none;" } })
                    @Html.ValidationMessageFor(modelo => modelo.puerto, "", new { @class = "form-control", @style = "display: none;", @value = 587 })
                </div>
            </div>

            <br />
            <div class="form-group">
                <div class="col-md-offset-1 ">
                    <button type="button" id="btnGuardar" class="btn btn-primary">
                        Registrar
                    </button>
                    <a href="../ParametrosEmail" class="btn btn-primary">
                        Cancelar
                    </a>
                </div>
                <br />

            </div>

        </div>
    }
</body>
</html>
<script src="~/Scripts/jquery2-1-4.min.js"></script>
<script src="~/Scripts/sweetalert2@9.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script>
    $("#btnGuardar").click(function () {

        var boolean = confirm("Desea adicionar un nuevo correo?")
        if (boolean) {

            $("#theForm").submit();
        } else {
            alert("El usuario cancelo el proceso");
        }
    });

</script>


