@model IEnumerable<FNTC.Finansoft.Accounting.DTO.FabricaCreditos.FCConfiguracion>

@{
    ViewBag.Title = "Fábrica de Crédito";
    Layout = "~/Views/Shared/_Layoutcreditos.cshtml";
}

<script src="~/Scripts/sweetalert.min.js"></script>
<link href="~/Content/css/sweetalert.css" rel="stylesheet" />
<div class="container" style="margin-top:2%; background: rgb(248, 248, 248);">

    <ul class="col-md-offset-2 nav nav-tabs" style="margin-top:0%;border: none; margin-left: 2%;">
        <li class="active"><a href="#" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Configuración </a></li>
        <li><a href="/FabricaCreditos/ActividadesAsociados" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Actividades </a></li>
        <li><a href="/FabricaCreditos/Dependencias" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Dependencias </a></li>
        <li><a href="/FabricaCreditos/MotivosDevolucion" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Devolución </a></li>
        <li><a href="/FabricaCreditos/Documentos" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Documentos </a></li>
        <li><a href="/FabricaCreditos/DocumentosActividad" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Documentos Por Actividad </a></li>
        <li><a href="/FabricaCreditos/EntesAprobacion" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Entidades </a></li>
        <li><a href="/FabricaCreditos/CentralRiesgo" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Centrales</a></li>
    </ul>
    <div class="tab-content contenedortabs">
        <div id="menu1" class="tab-pane fade in active">
            <div class="col-md-12"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 100%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Configuración General</h3></div>
            <div class="col-md-12">
                <div class="col m-5">
                    <a href="/FabricaCreditos/FabricaCreditos/Create" class="btn btn-primary" data-toggle="modal">
                        Nueva Configuración
                    </a>
                </div>
                <br />
                <div style="width:100%; margin:0 auto" class="tablecontainer">
                    <table id="tablaCreditos" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-condensed">
                        <thead>
                            <tr>
                                <th>Editar</th>
                                <th>Codigo</th>
                                <th>Tiempo Respuesta (Min)</th>
                                <th>Tiempo Respuesta (Max)</th>
                                <th>Otorgar Credito En</th>
                                <th>Edad (Min)</th>
                                <th>Edad (Max)</th>
                                <th>Activa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.ActionLink("Editar", "Edit", new { id = item.idConfiguracion })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.idConfiguracion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tiempoRespuestaSolMin)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tiempoRespuestaSolMax)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tiempoMaxOtorgarCredito)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.edadMinCredito)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.edadMaxCredito)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.activa)
                                    </td>
                                        @Html.HiddenFor(modelItem => item.idSedeApruebaCreditos)
                                    
                                        @Html.HiddenFor(modelItem => item.idCentralRiesgo)
                                    

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
