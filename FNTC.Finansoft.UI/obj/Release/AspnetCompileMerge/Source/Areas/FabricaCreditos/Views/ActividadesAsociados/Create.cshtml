@model FNTC.Finansoft.Accounting.DTO.FabricaCreditos.FCActividades
@{
    ViewBag.Title = "Fábrica de Crédito";
    Layout = "~/Views/Shared/_Layoutcreditos.cshtml";
}

<script src="~/Scripts/sweetalert.min.js"></script>
<link href="~/Content/css/sweetalert.css" rel="stylesheet" />
<div class="container" style="margin-top:2%; background: rgb(248, 248, 248);">

    <ul class="col-md-offset-2 nav nav-tabs" style="margin-top:0%;border: none; margin-left: 2%;">
        <li><a href="/FabricaCreditos/FabricaCreditos" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Configuración </a></li>
        <li class="active"><a href="/FabricaCreditos/ActividadesAsociados" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Actividades </a></li>
        <li><a href="/FabricaCreditos/Dependencias" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Dependencias </a></li>
        <li><a href="/FabricaCreditos/MotivosDevolucion" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Devolución </a></li>
        <li><a href="/FabricaCreditos/Documentos" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Documentos </a></li>
        <li><a href="/FabricaCreditos/DocumentosActividad" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Documentos Por Actividad </a></li>
        <li><a href="/FabricaCreditos/EntesAprobacion" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Entidades </a></li>
        <li><a href="/FabricaCreditos/CentralRiesgo" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Centrales</a></li>
    </ul>

</div>
<div class="tab-content contenedortabs">
    <div id="" class="tab-pane fade in active">
        <div class="col-md-12"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 100%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Actividades Asociado - Adicionar</h3></div>
        <div class="col-md-12">
            <div class="col m-5">
                <a href="/FabricaCreditos/ActividadesAsociados" class="btn btn-primary" data-toggle="modal">
                    Regresar
                </a>
            </div>
            <br />
            <div class="modal-body">
                @using (Html.BeginForm("Create", "ActividadesAsociados", new { area = "FabricaCreditos" }, FormMethod.Post, new { id = "theForm" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <input id="modo" name="modo" hidden readonly />
                        <input id="idConfiguracion" name="idConfiguracion" hidden readonly />
                        <div class="row">
                            <div class="form-group col-md-6">
                                @Html.LabelFor(model => model.nombreActividad, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.nombreActividad, new { htmlAttributes = new { @class = "form-control", Style = "text-transform: uppercase" } })
                                @Html.ValidationMessageFor(model => model.nombreActividad, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(model => model.descripcionActividad, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.descripcionActividad, new { htmlAttributes = new { @class = "form-control", Style = "text-transform: uppercase" } })
                                @Html.ValidationMessageFor(model => model.descripcionActividad, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-6">
                                @Html.LabelFor(model => model.nReferencias, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.nReferencias, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.nReferencias, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(model => model.nCodeudores, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.nCodeudores, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.nCodeudores, "", new { @class = "text-danger" })
                            </div>
                        </div>                      

                        <div class="row">
                            <div class="modal-footer">
                                <button id="/FabricaCreditos/ActividadesAsociados/Create" type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                                <button id="" type="submit" class="btn btn-primary">Guardar</button>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</div>


