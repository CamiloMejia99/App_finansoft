<script src="~/Scripts/SIAR/perdidaEsperada.js"></script>
<html>
<head>
    <meta name="viewport" content="width=device-width">
</head>
<body>
    <div class="col-md-12" style="background:#ECECEC; width:100%;left: 10px;">
        <br />
        <ul class="col-md-offset-2 nav nav-tabs" style="margin-top:0%;border: none; margin-left: 2%;">
            <li><a href="/SIAR/Siar/ViewLineas" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Líneas </a></li>
            <li class="active"><a href="/SIAR/Siar/ViewPerdidaEsperada" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Pérdida Esperada </a></li>
            <li><a href="/SIAR/Siar/ViewAnalisisCredito" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Análisis Créditos </a></li>
        </ul>
        <div class="tab-content contenedortabs">
            <div class="row" style="margin-top:0.5%;margin-left:auto;margin-right:auto">
                <div class="col-lg-offset-10 col-lg-2 col-sm-12">
                    <a href="/../SIAR/Index"><i class="fa fa-arrow-circle-left fa-lg" aria-hidden="true">Salir al menú</i></a>
                </div>

            </div>
            <div class="card" style="background-color:white;margin-left:10px;margin-right:10px;">
                <div class="card-header" style="background-color:#274766;color:white;border-radius:5px;">
                    PÉRDIDA ESPERADA
                </div>
                <div class="card-body" style="background-color:white;margin-left:10px;margin-right:10px">
                    <br />
                    <div class="row">
                        <div class="col-md-2 col-sm-12">
                            <b>Fecha Corte:</b> <input class="form-control" type="date" name="fechaCorte" id="fechaCorte" value="" />
                        </div>
                        <div class="col-md-1 col-sm-1" style="margin-top:1%;">
                            <button class="btn btn-primary" id="btnCargaDatos">Cargar Datos</button>
                        </div>
                    </div>
                    <hr />
                    <table id="tablaPP" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-condensed table-responsive">
                        <thead class="thead-inverse" style="background-color:#E3E3E3;">
                            <tr>
                                <th>N°</th>
                                <th>Nit Cliente</th>
                                <th>Nombre Cliente</th>
                                <th>Mora</th>
                                <th>Calificación</th>
                                <th>Saldo</th>
                                <th>Linea</th>
                                <th>Crédito</th>
                            </tr>
                        </thead>
                    </table>
                    <br />
                </div>@*END CARD BODY*@
            </div>@*END CARD*@

            <br />
        </div>
        <br />
    </div>
</body>
</html>

