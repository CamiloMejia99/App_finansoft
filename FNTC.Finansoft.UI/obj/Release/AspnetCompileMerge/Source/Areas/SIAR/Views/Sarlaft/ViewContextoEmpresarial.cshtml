@model IEnumerable<FNTC.Finansoft.Accounting.DTO.SARLAFT.ContextoEmpresarial>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Contexto Empresarial";
}



@section Styles{
    <link href="~/Content/css/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/css/chosen.css" rel="stylesheet" />

}


<link href="~/Content/css/buttons.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.buttons.min.js"></script>
<script src="~/Scripts/buttons.flash.min.js"></script>
<script src="~/Scripts/jszip.min.js"></script>
<script src="~/Scripts/pdfmake.min.js"></script>
<script src="~/Scripts/vfs_fonts.js"></script>
<script src="~/Scripts/buttons.html5.min.js"></script>
<script src="~/Scripts/buttons.print.min.js"></script>
@*<script src="~/Scripts/SARLAFT/IndexContextoEmpresarial.js"></script>*@
<script src="~/Scripts/sweetalert2@9.js"></script>
<div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#274766;color:white">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="color:white">x</button>
                <h4 class="modal-title" id="myModalLabel">Detalle del Contexto</h4>
            </div>
            
            <div class="modal-body">
                <div id="modal-content">
                    <div class="center">
                        <center>
                            <h3><b>SARLAFT</b></h3>
                        </center>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-sm-2 col-xs-12">
                            <span><b>Descripción:</b></span>
                        </div>
                        <div class="col-sm-10 col-xs-12">
                            <p id="descripcion" class="justify-content-start" />
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-sm-2 col-xs-12">
                            <span><b>Misión:</b></span>
                        </div>
                        <div class="col-sm-10 col-xs-12">
                            <p id="mision" class="justify-content-start" />
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-sm-2 col-xs-12">
                            <span><b>Visión:</b></span>
                        </div>
                        <div class="col-sm-10 col-xs-12">
                            <p id="vision" class="justify-content-start" />
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-sm-2 col-xs-12">
                            <span><b>Objetivo Empresarial:</b></span>
                        </div>
                        <div class="col-sm-10 col-xs-12">
                            <p id="objetivo" class="justify-content-start" />
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-sm-2 col-xs-12">
                            <span><b>Contexto Externo:</b></span>
                        </div>
                        <div class="col-sm-10 col-xs-12">
                            <p id="contextoExterno" class="justify-content-start" />
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-sm-2 col-xs-12">
                            <span><b>Contexto Interno:</b></span>
                        </div>
                        <div class="col-sm-10 col-xs-12">
                            <p id="contextoInterno" class="justify-content-start" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-md-12" style="background:#ECECEC; width:100%;left: 10px;">
    <br />
    <ul class="col-md-offset-2 nav nav-tabs" style="margin-top:0%;border: none; margin-left: 2%;">
        <li><a href="/SIAR/Sarlaft/ViewMatrizCalor" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Matriz de Calor </a></li>
        <li class="active"><a href="/SIAR/Sarlaft/ViewContextoEmpresarial" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Contexto Empresarial </a></li>
        <li><a href="/SIAR/Sarlaft/ViewMacroprocesos" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Macroprocesos </a></li>
        <li><a href="/SIAR/CargoResponsable" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Cargos Responsables </a></li>
        <li><a href="/SIAR/Proceso/Index" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Procesos </a></li>
    </ul>
    <div class="tab-content contenedortabs">
        <div class="row" style="margin-top:0.5%;margin-left:auto;margin-right:auto">
            <div class="col-lg-offset-10 col-lg-2 col-sm-12">
                <a href="/../SIAR/Index"><i class="fa fa-arrow-circle-left fa-lg" aria-hidden="true">Salir al menú</i></a>
            </div>

        </div>
        <div class="row">
            <h3 style="margin-left:3%;color:#6f6f6f"><b>Contexto General de la Empresa</b></h3>
        </div>
        <div class="card" style="background-color:white;margin-left:10px;margin-right:10px;">
            <div class="card-header" style="background-color:#274766;color:white;border-radius:5px;">
                Contexto Empresarial
            </div>
            <div class="card-body" style="background-color:white;margin-left:10px;margin-right:10px">
                <br />
                <div class="row">
                    <div style="width:90%;margin-left:auto;margin-right:auto">
                        <button id="btnAgregar" class="btn btn-success">Agregar Contexto</button>
                        <table id="tabla1" cellpadding="0" cellspacing="0" border="0" class="table table-responsive table-bordered">
                            <thead style="background-color:black;color:white">
                                <tr>
                                    <th>Descripción</th>
                                    <th>Misión</th>
                                    <th>Visión</th>
                                    <th width="10%">Opciones</th>
                                </tr>
                            </thead>
                            <tbody style="background-color:#e4e4e4;color:black">
                                @foreach(var item in Model)
                                 {
                                    <tr>
                                        <th>@Html.DisplayFor(modelItem => item.descripcion)</th>
                                        <th>@Html.DisplayFor(modelItem => item.mision)</th>
                                        <th>@Html.DisplayFor(modelItem => item.vision)</th>
                                        <th>
                                            <a id="btnEditar" class="btn btn-inline btn-xs btn-primary" href="/SIAR/Sarlaft/EditContextoEmpresa?id=@item.id" title="Editar">
                                                <i class="fa fa-pencil" aria-hidden="true"></i>
                                            </a> &nbsp;&nbsp;
                                            @*<button class="btn btn-inline btn-xs btn-warning" type="button" data-target="#modal_contexto" data-toggle="modal" data-backdrop="static" data-keyboard="false" onclick="detalle_contexto('@item.id')"><i class="fa fa-info-circle" aria-hidden="true"></i></button>&nbsp;&nbsp;*@
                                            <a href="myModal" class="btnDetails btn btn-warning btn-xs" data-toggle="modal" data-id="@item.id" title="Detalles">
                                                <i class="glyphicon glyphicon-eye-open"></i>
                                            </a>
                                        </th>
                                    </tr>
                                 }
                            </tbody>
                        </table>
                    </div>
                </div>
                <br />
            </div>
        </div>
        <br />
    </div>
    <br />
</div>
@*@Html.Partial("Modal_Contexto")*@
@section scripts
{
    <script src="~/Scripts/SARLAFT/IndexContextoEmpresarial.js"></script>
}
