
@model IEnumerable<FNTC.Finansoft.Accounting.DTO.Terceros.TerceroDTO>
@using Lib.Web.Mvc.JQuery.JqGrid

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<link href="~/Content/themes/jqgridbootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.4/themes/redmond/jquery-ui.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/free-jqgrid/4.13.3/css/ui.jqgrid.min.css">

@{
    var grid = new JqGridHelper<FNTC.Finansoft.Accounting.DTO.Accounting.CuentaDTO>("planCuentas",
        dataType: JqGridDataTypes.Json,
        methodType: JqGridMethodTypes.Post,
        pager: true,
         sortingName: "CODIGO",
        sortingOrder: JqGridSortingOrders.Asc,
        url: Url.Action("PlanCuentas"),
        viewRecords: true,
        width: 400,
      //  dynamicScrollingMode:JqGridDynamicScrollingModes.HoldVisibleRows,
        

        // cellEditingEnabled:true,

         cellEditingUrl: Url.Action("UpdateTercero")
         , shrinkToFit: true
).Navigator(new Lib.Web.Mvc.JQuery.JqGrid.JqGridNavigatorOptions() {CloneToTop=true, Search = true, SearchToolTip = "Buscar" },
        editActionOptions: new Lib.Web.Mvc.JQuery.JqGrid.JqGridNavigatorEditActionOptions() { Url = Url.Action("UpdateTercero") },
        addActionOptions: new Lib.Web.Mvc.JQuery.JqGrid.JqGridNavigatorEditActionOptions() { Url = Url.Action("CreateAuxiliar") }
        , deleteActionOptions: new Lib.Web.Mvc.JQuery.JqGrid.JqGridNavigatorDeleteActionOptions() { Url = Url.Action("DeleteProduct") }
    );


}

@grid.GetHtml()

@section JavaScript {
    <script type="text/javascript">
        $(document).ready(function () {
            @grid.GetJavaScript()
        });
    </script>
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/free-jqgrid/4.13.3/js/jquery.jqgrid.min.js"></script>
<style type="text/css">
    .ui-jqgrid .ui-jqgrid-htable th div {
        height: auto;
        overflow: hidden;
        padding-right: 4px;
        padding-top: 2px;
        position: relative;
        vertical-align: text-top;
        white-space: normal !important;
    }
</style>




