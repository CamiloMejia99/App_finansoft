@model IEnumerable<FNTC.Finansoft.Accounting.DTO.Nomina.PlanoEmpresa>

<div class="table-responsive col-md-12">

    <table class="table table-striped table-bordered dataTable no-footer" style="background-color: #FFF;">
        <tr>
            <th class="columnatablaazul2">
                Nombre del plano
            </th>
            <th class="columnatablaazul2">
                @Html.DisplayNameFor(model => model.CODIGOEMP)
            </th>
            <th class="columnatablaazul2">
                @Html.DisplayNameFor(model => model.NOMBREMP)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescuentosNominaClaseDePlanos.NOMBRE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CODIGOEMP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NOMBREMP)
            </td>
            <td>
                <button class="editartablas" onclick=" $('#divmodal').load('@Url.Action("Edit","PlanoEmpresas",new { id=item.id})')"><i class="fa fa-pencil" aria-hidden="true"></i></button>
            </td>
            <td>
                <button class="eliminartablas" onclick=" $('#divmodal').load('@Url.Action("Delete","PlanoEmpresas",new { id=item.id })')"><i class="fa fa-trash" aria-hidden="true"></i></button>
            </td>
        </tr>
        }

    </table>
</div>
