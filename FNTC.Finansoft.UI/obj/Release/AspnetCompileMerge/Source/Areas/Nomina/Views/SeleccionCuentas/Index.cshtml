        $("#CODIGO").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/accounting/plandecuentas/GetCuentasAA",
                    //url: "/accounting/plandecuentas/GetCuentas4Selects",
                    type: "POST",
                    dataType: "json",
