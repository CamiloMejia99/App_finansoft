@model IEnumerable<FNTC.Finansoft.Accounting.DTO.Tesoreria.TsorMatricularBanco>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:1%; background: rgb(248, 248, 248);">
    <div class="col-md-12"><h2 style="color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Tesoreria</h2></div>
    <ul class="col-md-offset-2 nav nav-tabs" style="margin-top:2%;border: none; margin-left: 2%;">
        <li><a href="/Tesoreria/Cheques" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Cheques </a></li>
        <li><a href="/Tesoreria/Chequeras" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Chequeras </a></li>
        <li><a href="/Tesoreria/Bancos" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Bancos </a></li>
        <li class="active"><a href="/Tesoreria/MatricularBanco" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Matricular Banco </a></li>
    </ul>
    <div class="tab-content contenedortabs">
        <div id="menu1" class="tab-pane fade in active">
            <div class="col-md-12"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 100%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Matricular Banco</h3></div>

            <div class="col-md-12">
                <p>
                    @Html.ActionLink("Matricular Banco", "Create", null, null, new { @class = "btn btn-primary btn-large" })
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.codigo)
                        </th>
                        <th>
                            Banco
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NIT)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.numeroCuenta)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.tipoCuenta)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.codigoagencia)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.formatoComprobante)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.formatoImpresion)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.codigo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TsorBancos.CuentaMayor.NOMBRE)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NIT)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.numeroCuenta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Parameter.Valor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.agencias.nombreagencia)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.formatoComprobante)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Parameter1.Valor)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.id })
                        </td>
                    </tr>
                    }

                </table>
            </div>
        </div><!--MENU-->
    </div><!--CONTENEDOR TABS-->
</div>

