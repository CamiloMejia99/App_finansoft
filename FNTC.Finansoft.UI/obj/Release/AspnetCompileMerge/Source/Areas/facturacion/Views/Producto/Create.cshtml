@model FNTC.Finansoft.Accounting.DTO.Facturacion.producto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> itemIva = (List<SelectListItem>)ViewBag.Iva;

}

<script src="~/Scripts/sweetalert.min.js"></script>
<link href="~/Content/css/sweetalert.css" rel="stylesheet" />
<link href="~/Content/css/chosen.css" rel="stylesheet" />
<script src="~/Scripts/facturacion/Create.js"></script>

<style>
    legend {
        padding-top: 0;
        padding-bottom: 0;
    }

    fieldset, td {
        padding-top: 0;
    }

    table {
        border-collapse: collapse;
    }
</style>
@using (Html.BeginForm("Create", "Producto", new { area = "facturacion" }, FormMethod.Post, new { id = "theForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div id="accordion" role="tablist" aria-multiselectable="true" style="margin-top:2%">
        <div class="row">
            <a class="col-lg-offset-10" href="/facturacion/Producto/Index" title="Atras" style="color:#000000;">
                <i class="fa fa-arrow-circle-o-left fa-2x smaller" aria-hidden="true">Volver</i>
            </a>
        </div>
        <div class="panel panel-default">

            <div class="panel-heading" role="tab" id="headingOne" style="background-color:#274766">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne" style="color:white;">
                        Datos del Producto
                    </a>
                </h4>
            </div>
            <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne" style="padding:1%">

                <div class="panel">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <label>NOMBRE PRODUCTO</label>
                                        @Html.EditorFor(model => model.nomProducto, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.nomProducto, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <label>PRECIO DE ENTRADA</label>
                                        @Html.EditorFor(model => model.precioEntrada, new { htmlAttributes = new { @class = "form-control", @type = "hidden" } })
                                        @Html.EditorFor(model => model.auxPrecioEntrada, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.auxPrecioEntrada, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <label>PRECIO DE SALIDA</label>
                                        @Html.EditorFor(model => model.precioSalida, new { htmlAttributes = new { @class = "form-control", @type = "hidden" } })
                                        @Html.EditorFor(model => model.auxPrecioSalida, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.auxPrecioSalida, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <label>INVENTARIO INICIAL</label>
                                        @Html.EditorFor(model => model.inventarioInicial, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.inventarioInicial, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <label>IVA</label>
                                        <br />
                                        @Html.DropDownListFor(model => model.iva, itemIva, null, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.iva, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                        </div>
                        <hr />
                        <button type="button" class="btn btn-success" id="btnGuardar"><i class="fa fa-floppy-o" aria-hidden="true"></i> Guardar </button>
                        <button type="button" class="btn btn-danger" id="btnCerrar"><i class="fa fa-times" aria-hidden="true"></i> Cerrar</button>
                    </div>
                </div>

            </div>
        </div>

        <br />
            @*<button type="button" class="btn btn-primary">Save changes</button>*@
        
    </div>
    </div>
}
<script src="~/Scripts/chosen.jquery.min.js"></script>
