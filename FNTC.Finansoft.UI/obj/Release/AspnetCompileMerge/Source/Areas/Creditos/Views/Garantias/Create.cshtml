@model FNTC.Finansoft.Accounting.DTO.MCreditos.Garantias

@{
    Layout = "~/Views/Shared/_Layoutcreditos.cshtml";
}

@{
    ViewBag.Title = "Crear Tipos de Garantia.";
}

@section Styles{

    <link href="~/Content/css/checkbox_radio.css" rel="stylesheet" />
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    CREAR GARANTIAS
                </div>
                <div class="panel-body">
                    <div class="row">

                        @Html.ValidationSummary(true)
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Garantias_Codigo, new { @class = "control-label col-md-10" })
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(model => model.Garantias_Codigo, new { @id = "Codigo", @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Garantias_Codigo)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Clase_Garantias_Id, new { @class = "control-label col-md-10" })
                                        <div class="col-md-10">

                                            @Html.DropDownList("Clase_Garantias_Id", null, "SELECCIONE", new {@class = "form-control" })
                                            @*@Html.DropDownList("Clase_Garantias_Id", String.Empty)*@
                                            @*String.Empty*@
                                            @Html.ValidationMessageFor(model => model.Clase_Garantias_Id)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Garantias_Descripcion, new { @class = "control-label col-md-10" })
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(model => model.Garantias_Descripcion, new { @id = "Descrip", @class = "form-control", @readonly = "readonly" })
                                            @Html.ValidationMessageFor(model => model.Garantias_Descripcion)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Garantias_Porcentaje_Credito_Pagado, new { @class = "control-label col-md-10" })
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(model => model.Garantias_Porcentaje_Credito_Pagado, new { @id = "Porcentaje", @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Garantias_Porcentaje_Credito_Pagado)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Garantias_Codeudor, new { @class = "control-label col-md-10" })
                                        <div class="col-md-10 checkbox">
                                            @Html.CheckBoxFor(model => model.Garantias_Codeudor, new { @id = "codeudor", @type = "checkbox" })
                                            <label for="codeudor">Activo</label>
                                            @Html.ValidationMessageFor(model => model.Garantias_Codeudor)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Garantias_Activo, new { @class = "control-label col-md-10" })
                                        <div class="col-md-10 checkbox">
                                            @Html.CheckBoxFor(model => model.Garantias_Activo, new { @id = "activo", @type = "checkbox" })
                                            <label for="activo">Activo</label>
                                            @Html.ValidationMessageFor(model => model.Garantias_Activo)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Garantias_Tipo, new { @class = "control-label col-md-10" })
                                        <div class="col-md-10 checkbox">
                                            @Html.CheckBoxFor(model => model.Garantias_Tipo, new { @id = "garantias", @type = "checkbox" })
                                            <label for="garantias">Activo</label>
                                            @Html.ValidationMessageFor(model => model.Garantias_Tipo)
                                        </div>
                                    </div>


                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Garantias_Hipotecarias, new { @class = "control-label col-md-10" })
                                        <div class="col-md-10 checkbox">
                                            @Html.CheckBoxFor(model => model.Garantias_Hipotecarias, new { @id = "hipoteca", @type = "checkbox" })
                                            <label for="hipoteca">Activo</label>
                                            @Html.ValidationMessageFor(model => model.Garantias_Hipotecarias)
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <br />
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="col-md-offset-0 col-md-12">
                                    <input type="submit" value="Crear" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Regresar a La Lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/chosen.jquery.min.js"></script>
    <script>
        //BOTON QUE HABILITA CODEUDOR SOLO CUANDO ES NECESARIO:
        //====================================================

        $("#Clase_Garantias_Id").change(function () {
            var seleccion = $("#Clase_Garantias_Id").val();
            //inicio ajax
            $.ajax({
                type: "POST",
                url: "@Url.Action("GetClaseGarantia", "Garantias")",
                datatype: "Json",
                data: { IdClase: seleccion },

                success: function (data) {
                    $.each(data, function (index, value) {

                        $('#Descrip').val(data);

                    });
                }
            });

            //fin ajax



        })

    </script>
}
