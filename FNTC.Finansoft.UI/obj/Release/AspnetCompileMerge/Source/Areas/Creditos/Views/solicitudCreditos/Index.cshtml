@model IEnumerable<FNTC.Finansoft.Accounting.DTO.FormulariosSolicitud.solicitudCredito>

@{
    Layout = "~/Views/Shared/_Layoutahorros.cshtml";
}


<div class="col-md-12" style="background: rgb(248, 248, 248); width:1200px;left: 100px;">

    <div class="form-group">
        <div class="col-md-8"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 1150px; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Formularios de Solicitud de Crédito</h3></div>
        <div class="col-md-2" style=" margin-top:35px;">
            <a class="" href="/Creditos/Creditos/Index" title="Atras">
                <i class="fa fa-arrow-circle-o-left fa-2x " aria-hidden="true">Volver</i>
            </a>

        </div><div class="col-md-2" style=" margin-top:35px;">
            <a href="/Creditos/solicitudCreditos/Create" class="AddUser btn btn-success btn-small btnnuevo">Nuevo Formulario</a>
        </div>

    </div>
    <div class="form-group">
        <div style="width:1150px">
            <table id="myTable" class="table table-striped table-bordered dataTable no-border">
                <thead style="background-color:lightslategray">
                    <tr>
                        <th>
                            Nombre Asociado
                        </th>
                        <th>
                            Cedula Asociado
                        </th>
                        <th>
                            Pagaré
                        </th>
                        <th>
                            Asesor Comercial
                        </th>
                        
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="align-center medium">
                            <td>
                                @Html.DisplayFor(modelItem => item.Terceros.NOMBRE,item.Terceros.APELLIDO1,item.Terceros.APELLIDO2)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.id_persona)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.pagare)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.asesorcomercial)
                            </td>
                            <td class="align-center">
                                <a id="editar" class="btn btn-inline btn-xs btn-primary" href="/Creditos/solicitudCreditos/Edit?id=@item.id_solicitud" title="Editar">
                                    <i class="fa fa-pencil" aria-hidden="true"></i>
                                </a> &nbsp;&nbsp;
                                <a id="editar" class="btn btn-inline btn-xs btn-success" href="/Creditos/solicitudCreditos/Details?id=@item.id_persona" title="Detalles">
                                    <i class="fa fa-eye" aria-hidden="true"></i>
                                </a>&nbsp;&nbsp;
                                <a id="editar" class="btn btn-inline btn-xs btn-danger" href="/Creditos/solicitudCreditos/Delete?id=@item.id_solicitud" title="Eliminar">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



<link href="~/Content/css/jquery.dataTablesform.min.css" rel="stylesheet" />
@section scripts
{
    <script src="~/Scripts/jquery.dataTablesform.min.js"></script>

    <script>
		$(document).ready(function () {
			$('#myTable').DataTable({
				"language": {
					"url": "/Content/Spanish.json"
				}
			});
        });

    </script>
}






























