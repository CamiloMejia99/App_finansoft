@model FNTC.Finansoft.Accounting.DTO.MCreditos.BCreditos






@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    
<link href="~/Content/css/chosen.css" rel="stylesheet" />



<div id="crearBoton" class="container" style="margin-top:1%; background: rgb(248, 248, 248);">
    <div class="col-md-12"><h2 style="color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Documentos</h2></div>
    <div>
        <div id="menu1">
            <br><br>
            <div class="row">
                <div class="form-group col-md-12">

                    <div class="input-group">
                        @Html.DropDownList("InfoPagares", null, new { @class = "chosen-select-single", @id = "InfoPagares" })

                    </div>
                    <br>
                    
                    <div id="contenido"></div>

                </div>
            </div>
        </div>
    </div><!--MENU-->
</div><!--CONTENEDOR TABS-->



<script type="text/javascript">
    $(document).ready(function () {
        $(".chosen-select-single").chosen();
        $(".chosen-select-multiple").chosen();    //DESPUES DEL FINAL DEL DOCUMENTO AL PRINCIPIO DE LOS SCRIPTS
    });

    $("#InfoPagares").chosen().change(function () {
        
        var data = $("#InfoPagares").val();

        $('#contenido').empty();

        if($("#contenido").is(":empty")) {
            var button = '<li><a target="_blank" href="@Url.Action("Autorizacion", "Documentos")?id=' + data + '" class="tabsnota"> <i class="fa fa-file-text" aria-hidden="true"></i> Autorización </a></li>';
            $('#contenido').append(button);
        
            var button = '<li><a target="_blank" href="@Url.Action("Carta", "Documentos")?id=' + data + '" class="tabsnota"> <i class="fa fa-file-text" aria-hidden="true"></i> Carta </a></li>';
            $('#contenido').append(button);
        
            var button = '<li><a target="_blank" href="@Url.Action("Pagare", "Documentos")?id=' + data + '" class="tabsnota"> <i class="fa fa-file-text" aria-hidden="true"></i> Pagaré </a></li>';
            $('#contenido').append(button);    
        }
            

        
    });
            
</script>

