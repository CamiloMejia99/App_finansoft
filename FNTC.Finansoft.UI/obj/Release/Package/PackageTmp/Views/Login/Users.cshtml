<link rel="stylesheet" href="/Content/assets/css/ace.css" class="ace-main-stylesheet" id="main-ace-style" />
<div class="container" style="margin-top:2%; background: rgb(248, 248, 248);">
    <div class="page-content" style="padding-bottom: 10px;">
        <div>
            <div class="row">
                <div class="col-lg-12">

                    <div class="col-lg-12">
                        <div class="form-group">

                            <h3 class="site-title" style="color:#C8C8C8;">
                                Usuarios Encontrados: @ViewBag.count
                            </h3>
                            @if (ViewBag.Message != null)
                            {
                                <div class="alert alert-block alert-success">
                                    <button type="button" class="close" data-dismiss="alert">
                                        <i class="ace-icon fa fa-times"></i>
                                    </button>

                                    <i class="ace-icon fa fa-check green"></i>


                                    <strong class="green">
                                        @ViewBag.Message

                                    </strong>,

                                </div>

                            }
                            <div class="pull-right">
                                <a href="/Login/Register" class="restablecer btn btn-primary btn-xs" data-toggle="modal">
                                    Restablecer Contraseña
                                </a>

                                <span>|</span>
                                <a href="/Login/Create" class="btn btn-warning btn-xs">
                                    Nuevo Usuario
                                </a>
                            </div>
                        </div>
                    </div>


                </div>
            </div>


        </div>

        <div class="row">

            <div class="col-lg-12">
                <div class="form-group">
                    <table id="dynamic-tableUsers" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    Nombre de Usuario
                                </th>
                                <th>
                                    Nombres y Apellidos
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Fecha de Creación
                                </th>
                                <th>
                                    Email Confirmado
                                </th>

                                <th>
                                    Actividad de Usuario
                                </th>

                                @*<th></th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombres)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fecha_Registro)
                                    </td>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => item.EmailConfirmed)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastActivityDate)
                                    </td>



                                    @*<td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id })

                                        </td>*@
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
