
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Análisis de los créditos";
}

@section Styles{
    @*<link href="~/Content/css/jquery-ui.min.css" rel="stylesheet" />*@
    <link href="~/Content/css/chosen.css" rel="stylesheet" />
}

<script src="~/Scripts/sweetalert2@9.js"></script>

<link href="~/Content/css/buttons.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.buttons.min.js"></script>
<script src="~/Scripts/buttons.flash.min.js"></script>
<script src="~/Scripts/jszip.min.js"></script>
<script src="~/Scripts/pdfmake.min.js"></script>
<script src="~/Scripts/vfs_fonts.js"></script>
<script src="~/Scripts/buttons.html5.min.js"></script>
<script src="~/Scripts/buttons.print.min.js"></script>
<script src="~/Scripts/SIAR/analisisCredito.js"></script>
<html>
<head>
    <meta name="viewport" content="width=device-width">
</head>
<body>
    <div class="col-md-12" style="background:#ECECEC; width:100%;left: 10px;">
        <br />
        <ul class="col-md-offset-2 nav nav-tabs" style="margin-top:0%;border: none; margin-left: 2%;">
            <li><a href="/SIAR/Siar/ViewLineas" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Líneas </a></li>
            <li><a href="/SIAR/Siar/ViewPerdidaEsperada" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Pérdida Esperada </a></li>
            <li class="active"><a href="/SIAR/Siar/ViewAnalisisCredito" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Análisis Créditos </a></li>
        </ul>
        <div class="tab-content contenedortabs">
            <div class="row" style="margin-top:0.5%;margin-left:auto;margin-right:auto">
                <div class="col-lg-offset-10 col-lg-2 col-sm-12">
                    <a href="/../SIAR/Index"><i class="fa fa-arrow-circle-left fa-lg" aria-hidden="true">Salir al menú</i></a>
                </div>

            </div>
            <div class="card" style="background-color:white;margin-left:10px;margin-right:10px;">
                <div class="card-header" style="background-color:#274766;color:white;border-radius:5px;">
                    ANÁLISIS DE LOS CRÉDITOS
                </div>
                <div class="card-body" style="background-color:white">
                    <br />
                    <div class="row" style="margin-left:3%">
                        <div class="col-md-3 col-sm-auto">
                            <div class="form-group">
                                <label>Clasificación:</label>
                                <div class="col-md-12">
                                    @Html.DropDownList("lineas", (IEnumerable<SelectListItem>)ViewBag.lineas, null, new { @class = "form-control", @id = "clasificacion" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-auto">
                            <div class="form-group">
                                <label>Línea:</label>
                                <div class="col-md-12">
                                    @Html.DropDownList("lineas", (IEnumerable<SelectListItem>)ViewBag.lineas, null, new { @class = "form-control", @id = "linea" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-left:3%;margin-top:2%">
                        <div class="col-md-3 col-sm-auto">
                            <div class="form-group">
                                <label>Subclasificación:</label>
                                <div class="col-md-12">
                                    @Html.DropDownList("subclasificacion", (IEnumerable<SelectListItem>)ViewBag.subclasificacion, null, new { @class = "form-control", @id = "subclasificacion" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-auto">
                            <div class="form-group">
                                <label>Fecha Corte:</label>
                                <div class="col-md-12">
                                    <input class="form-control" type="date" name="fechaCorte" id="fechaCorte" value="" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row" style="margin-left:3%">
                        <div class="col-md-1">
                            <button class="btn btn-primary" id="btnAnalizar">Analizar</button>
                        </div>
                    </div>
                    <hr />
                    <div class="row" style="margin-left:5%"><h3><b>Pérdida Esperada Acumulada</b></h3> </div>
                    <hr />
                    <div style="width:90%;margin-left:auto;margin-right:auto">
                        <table id="tablaPA" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-condensed table-responsive">
                            <thead class="thead-inverse" style="background-color:#E3E3E3;">
                                <tr>
                                    <th>N°</th>
                                    <th>RANGO</th>
                                    <th>CALIFICACIÓN</th>
                                    <th>PI</th>
                                    <th>EA</th>
                                    <th>PDI</th>
                                    <th>PE</th>
                                    <th>PEA</th>
                                </tr>
                            </thead>
                        </table>
                    </div>

                    <br />
                </div>@*END CARD BODY*@
            </div>@*END CARD*@

            <br />
        </div>
        <br />
    </div>
</body>
</html>
@section Scripts{

    <script type="text/javascript">
        $(document).ready(function () {

            $(".chosen-select-single").chosen();
            $(".chosen-select-multiple").chosen();
        });

    </script>


}


