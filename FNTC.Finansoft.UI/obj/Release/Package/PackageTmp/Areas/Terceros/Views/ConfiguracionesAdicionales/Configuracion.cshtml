@model IEnumerable<FNTC.Finansoft.Accounting.DTO.Terceros.CargoEmpresaTer>

@{
    ViewBag.Title = "CONFIGURACION";
    Layout = "~/Views/Shared/_Layoutcreditos.cshtml";
}

<script src="~/Scripts/sweetalert.min.js"></script>
<link href="~/Content/css/sweetalert.css" rel="stylesheet" />
<div class="container" style="margin-top:1%; background: rgb(248, 248, 248);">

    <ul class="col-md-offset-2 nav nav-tabs" style="margin-top:0%;border: none; margin-left: 2%;">
        <li class="active"><a href="#" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Configuración </a></li>
    </ul>
    <div class="tab-content contenedortabs">
        <div id="menu1" class="tab-pane fade in active">
            <div class="col-md-12"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 100%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Configuraciónes Adicionales</h3></div>
            <div class="col-md-12">
                <div class="col m-5">
                    <a href="../ConfiguracionesAdicionales/CrearCargo" class="btn btn-primary" data-toggle="modal">
                        Nueva Configuración
                    </a>
                </div>
                <br />
                <div style="width:100%; margin:0 auto" class="tablecontainer">
                    <table id="tablaCreditos" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-condensed">
                        <thead>
                            <tr>
                                <th>Editar</th>
                                <th>Nombre Cargo</th>
                                <th>Estado</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.ActionLink("Editar", "Editar", new { id = item.IDCargo })

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NombreCargo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EstadoCargo)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <a href="/Dashboard/Default#&movimientos" class="btn btn-primary" data-toggle="modal">
                    Regresar
                </a>

            </div>
        </div>
    </div>
</div>