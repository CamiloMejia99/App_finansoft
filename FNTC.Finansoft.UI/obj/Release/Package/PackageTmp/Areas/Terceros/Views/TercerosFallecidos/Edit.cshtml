@model FNTC.Finansoft.Accounting.DTO.Terceros.TercerosFallecidos

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> itemTerceros = (List<SelectListItem>)ViewBag.terceros;

}

<script src="~/Scripts/sweetalert.min.js"></script>
<link href="~/Content/css/sweetalert.css" rel="stylesheet" />
<link href="~/Content/css/chosen.css" rel="stylesheet" />


<style>
    legend {
        padding-top: 0;
        padding-bottom: 0;
    }

    fieldset, td {
        padding-top: 0;
    }

    table {
        border-collapse: collapse;
    }
</style>
@using (Html.BeginForm("Edit", "TercerosFallecidos", new { area = "Terceros" }, FormMethod.Post, new { id = "theForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)
        <div id="accordion" role="tablist" aria-multiselectable="true" style="margin-top:2%">
            <div class="row">
                <a class="col-lg-offset-10" href="/Terceros/TercerosFallecidos/Index" title="Atras" style="color:#000000;">
                    <i class="fa fa-arrow-circle-o-left fa-2x smaller" aria-hidden="true">Volver</i>
                </a>
            </div>
            <div class="panel panel-default">

                <div class="panel-heading" role="tab" id="headingOne" style="background-color:#274766">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne" style="color:white;">
                            Datos del Asociado
                        </a>
                    </h4>
                </div>
                <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne" style="padding:1%">

                    <div class="panel">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>ASOCIADO</label>
                                            @Html.DropDownListFor(model => model.nit, itemTerceros, null, new { @class = "chosen-select-single", @id="nit", @disabled="disabled" })
                                            @Html.HiddenFor(model => model.nit)
                                            @Html.ValidationMessageFor(model => model.nit, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>FECHA DE DEFUNCIÓN</label>
                                            @Html.EditorFor(model => model.fechaFallecido,new { htmlAttributes = new { @class = "form-control", @type="date" } })
                                            @Html.ValidationMessageFor(model => model.fechaFallecido, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <hr />
                            <button type="button" class="btn btn-success" id="btnGuardar"><i class="fa fa-floppy-o" aria-hidden="true"></i> Guardar </button>
                            <button type="button" class="btn btn-danger" id="btnCerrar"><i class="fa fa-times" aria-hidden="true"></i> Cerrar</button>
                        </div>
                    </div>

                </div>
            </div>

            <br />
            @*<button type="button" class="btn btn-primary">Save changes</button>*@

        </div>
    </div>
}
<script src="~/Scripts/chosen.jquery.min.js"></script>
<script type="text/javascript">
        $(document).ready(function () {
            $(".chosen-select-single").chosen();
            $(".chosen-select-multiple").chosen();

            //$('#nit').attr('disabled', true);
           
        });
    $("#btnGuardar").click(function () {
        $("#theForm").submit();
    });
    $("#btnCerrar").click(function () {
        window.location.href = '/Terceros/TercerosFallecidos/Index';
    });

</script>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<style>
    body {
        background-color: #DDDDDD !important;
    }
</style>



