@model FNTC.Finansoft.Accounting.DTO.DeterioroCartera.CuentaDeterioroCartera

@{
    ViewBag.Title = "Editar Cuentas Provisión Cartera";
    Layout = "~/Views/Shared/_Layoutcreditos.cshtml";
}
<link href="~/Content/css/chosen.css" rel="stylesheet" />
<div class="container" style="margin-top:2%; background: rgb(248, 248, 248);">

    <ul class="col-md-offset-2 nav nav-tabs" style="margin-top:0%;border: none; margin-left: 2%;">
        <li><a href="/DeterioroCartera/DeterioroParametros" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Provisión </a></li>
        <li class="active"><a href="#" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Cuentas provisión Cartera </a></li>
        <li><a href="/DeterioroCartera/Deterioros" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Deterioro Cartera </a></li>
        <li><a href="/DeterioroCartera/Deterioros/create" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Crear Deterioro Cartera </a></li>

    </ul>

    <div class="tab-content contenedortabs">
        <div id="menu1" class="tab-pane fade in active">
            <div class="col-md-12"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 100%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Cuentas provisión Cartera</h3></div>
            <div class="col-md-12">
                <div class="col m-5">
                    <br />
                    <a href="/DeterioroCartera/DeterioroParametros" class="btn btn-primary" data-toggle="modal">
                        Regresar
                    </a>
                </div>
                <br />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Seleccione Cuentas para deterioro de Cartera</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                     @Html.LabelFor(model => model.IdPlanCuentaDeterioro, "Cuenta  Provision cartera", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.IdPlanCuentaDeterioro, new SelectList(@ViewBag.Auxiliares, "CODIGO", "NOMBRE"), new { id = "cuentaprovision", @class = "form-control col-sm-4 letrasizquierda", style = "width: 300px;" })

                        @Html.ValidationMessageFor(model => model.IdPlanCuentaDeterioro, "", new { @class = "text-danger" })
                    </div>
             </div>
               

            <div class="form-group">
                @Html.LabelFor(model => model.IdPlanCuentaGastosProvision, "Cuenta Gastos Provision cartera", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.IdPlanCuentaGastosProvision, new SelectList(@ViewBag.Auxiliares, "CODIGO", "NOMBRE"), new { id= "cuentagasto",@class = "form-control col-sm-4", style = "width: 300px;" })

                    @Html.ValidationMessageFor(model => model.IdPlanCuentaGastosProvision, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="form-group">
               @Html.LabelFor(model => model.TComprobante, "Tipo Comprobante", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.TComprobante, new SelectList(@ViewBag.Comprobantes, "CODIGO", "NOMBRE"), new { id = "tipocomprobante", @class = "form-control col-sm-4", style = "width: 300px;" })

                    @Html.ValidationMessageFor(model => model.TComprobante, "", new { @class = "text-danger" })
                </div>
             </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NombreSeleccion, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NombreSeleccion, new { htmlAttributes = new { @class = "form-control", style = "width: 300px;" } })
                        @Html.ValidationMessageFor(model => model.NombreSeleccion, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </div>
            </div>
                }

            </div>

        </div>

    </div>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    
<script>

    $("#cuentagasto").chosen().change(function () {

        var vinculacion = $("#cuentagasto").val();
    });
    $("#cuentaprovision").chosen().change(function () {

        var vinculacion = $("#cuentaprovision").val();
    });
    $("#tipocomprobante").chosen().change(function () {

        var vinculacion = $("#tipocomprobante").val();
    });

</script>

    }
