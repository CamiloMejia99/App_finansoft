@model IEnumerable<FNTC.Finansoft.Accounting.DTO.Nomina.Discriminacion>

@{
    ViewBag.Title = "DESCUENTOS NOMINA";
    Layout = "~/Views/Shared/_Layoutcreditos.cshtml";
}

<script src="~/Scripts/sweetalert.min.js"></script>
<link href="~/Content/css/sweetalert.css" rel="stylesheet" />
<div class="container" style="margin-top:1%; background: rgb(248, 248, 248);">

    <div>
        <div id="menu1" class="tab-pane fade in active">
            <div class="col-md-12"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 100%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Discriminaciones - Descuentos Nomina</h3></div>
            <div class="col-md-12">
                <div class="col m-5" style="margin-left: 85%">
                    <a href="/Nomina/Discriminacions/Create" class="btn btn-success" data-toggle="modal">
                        Crear Nueva - Discriminacion
                    </a>
                </div>
                <br />
                <div style="width:100%; margin:0 auto" class="tablecontainer">
                    <table id="tablaCreditos" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-condensed">
                        <thead>
                            <tr>

                                <th>EMPRESA</th>
                                <th>PERIODO DE DEDUCCION</th>
                                <th>MES DE DEDUCCION</th>
                                <th>PLANO</th>
                                <th>FECHA DE ELABORACION</th>
                                <th>Archivo</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.PlanoEmpresa.NOMBREMP)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PERDEDUCC)
                                </td>
                                <td>
                                    @if (item.PERIODO == 1)
                                    {
                                        <span>ENERO</span>
                                    }
                                    @if (item.PERIODO == 2)
                                    {
                                        <span>FEBRERO</span>
                                    }
                                    @if (item.PERIODO == 3)
                                    {
                                        <span>MARZO</span>
                                    }
                                    @if (item.PERIODO == 4)
                                    {
                                        <span>ABRIL</span>
                                    }
                                    @if (item.PERIODO == 5)
                                    {
                                        <span>MAYO</span>
                                    }
                                    @if (item.PERIODO == 6)
                                    {
                                        <span>JUNIO</span>
                                    }
                                    @if (item.PERIODO == 7)
                                    {
                                        <span>JULIO</span>
                                    }
                                    @if (item.PERIODO == 8)
                                    {
                                        <span>AGOSTO</span>
                                    }
                                    @if (item.PERIODO == 9)
                                    {
                                        <span>SEPTIEMBRE</span>
                                    }
                                    @if (item.PERIODO == 10)
                                    {
                                        <span>OCTUBRE</span>
                                    }
                                    @if (item.PERIODO == 11)
                                    {
                                        <span>NOVIEMBRE</span>
                                    }
                                    @if (item.PERIODO == 12)
                                    {
                                        <span>DICIEMBRE</span>
                                    }


                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.PLANO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FECHACREACIONDIS)
                                </td>
                                <td>
                                   
                                    <a href="/Nomina/CorreccionNominas/Exportar?ID=@item.ID">
                                        Generar Archivo
                                    </a>
                                </td>

                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <a href="/Dashboard/Default/descuentosNomina?titulo=Descuentos+Nomina&menu=movimientos" class="btn btn-primary" data-toggle="modal">
                    Regresar
                </a>
            </div>
        </div>
    </div>
</div>