@model FNTC.Finansoft.Accounting.DTO.DescuentosNomina.OrdenDePrioridadPagos

@{
    ViewBag.Title = "Gestión & Configuración - DESCUENTOS DE NOMINA";
    Layout = "~/Views/Shared/_Layoutcreditos.cshtml";
    var user = User.Identity.Name;
    var fecha = DateTime.Now;
    var Nombre = ViewBag.Nombre;
    var OrdenNombre = ViewBag.NombreOrden;

}

<script src="~/Scripts/sweetalert.min.js"></script>
<link href="~/Content/css/sweetalert.css" rel="stylesheet" />

<div class="container" style="margin-top:2%; background: rgb(248, 248, 248);">

    <ul class="col-md-offset-2 nav nav-tabs" style="margin-top:0%;border: none; margin-left: 2%;">
        <li class="active"><a href="#" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Eliminar - Cuenta </a></li>

    </ul>
    <div class="tab-content contenedortabs">
        <div id="menu1" class="tab-pane fade in active">
            <div class="col-md-12"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 100%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Orden De Prioridad Pagos - Eliminar</h3></div>
            <div class="col-md-12">

                <div class="modal-body">
                    <form action="@Url.Action("EliminarOrden", "GestionConfiguracion")" method="post" id="frmPrioridad">
                        @Html.AntiForgeryToken()

                        <div class="form">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.IdOrdenPrioridadPagos)
                            <input id="modo" name="modo" hidden readonly />
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label class="control-label">Cuenta Contable</label>

                                    <div class="input-group">
                                        <input type="text" class="form-control" value="@Model.CodigoCuenta" readonly />
                                        <span class="input-group-addon" id="NOMBRE"></span>
                                    </div>

                                </div>
                                <div class="form-group col-md-6">
                                    <label class="control-label">Nombre Cuenta</label>
                                    <div>
                                        <input type="text" class="form-control" value="@Nombre" autocomplete="off" readonly />
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="control-label">Descripcion Cuenta</label>
                                    <div>
                                        <input type="text" class="form-control" value="@Model.DescripcionPagos" id="DescripcionPagos" name="DescripcionPagos" autocomplete="off" readonly />
                                    </div>
                                </div>

                                <div class="form-group col-md-6">
                                    <label class="control-label">User Control</label>
                                    <div>
                                        <input type="text" class="form-control" id="UserControlPagos" name="UserControlPagos" value="@user" readonly />
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="control-label">Tipo de Pago</label>
                                    <div>
                                        <div>
                                            <input type="text" class="form-control" value="@OrdenNombre" readonly />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="control-label">Fecha de Registro </label>
                                    <div>
                                        <input type="date" class="form-control" id="FechaCreacionPagos" value="@Model.FechaCreacionPagos.ToString("yyyy-MM-dd")" readonly />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="modal-footer">
                                    <a class="btn btn-primary" href="@Url.Action("OrdenDePrioridades","GestionConfiguracion")">Retornar</a>
                                    <button id="guardarConfig" type="button" class="btn btn-success">Eliminar</button>
                                    
                                </div>
                            </div>

                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>

        $("#guardarConfig").on('click', function () {
           
            const swalWithBootstrapButtons = Swal.mixin({
                customClass: {
                    confirmButton: 'btn btn-success',
                    cancelButton: 'btn btn-danger'
                },
                buttonsStyling: false
            })

            swalWithBootstrapButtons.fire({
                title: '¿Estas seguro?',
                text: "No podrás revertir esto!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Si, Eliminar!',
                cancelButtonText: 'No, Cancelar!',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    swalWithBootstrapButtons.fire(
                        'Eliminado!',
                        'Orden Eliminado.',
                        'success'
                    )
                    $("#frmPrioridad").submit();
                } else if (
                   
                    result.dismiss === Swal.DismissReason.cancel
                ) {
                    swalWithBootstrapButtons.fire(
                        'Cancelado',
                        'Orden No Eliminada',
                        'error'
                    )
                }
            })
            
        });

    </script>
}



