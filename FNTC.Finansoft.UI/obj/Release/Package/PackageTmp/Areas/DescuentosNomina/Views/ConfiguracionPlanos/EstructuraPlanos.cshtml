
@model IEnumerable<FNTC.Finansoft.Accounting.DTO.DescuentosNomina.EstructuraPlanos>

@{
    ViewBag.Title = "Configuración Planos - DESCUENTOS DE NOMINA";
    Layout = "~/Views/Shared/_Layoutcreditos.cshtml";
    <link href="//cdn.datatables.net/1.12.0/css/jquery.dataTables.min.css" rel="stylesheet" />


}

<script src="~/Scripts/sweetalert.min.js"></script>
<link href="~/Content/css/sweetalert.css" rel="stylesheet" />
<div class="container" style="margin-top:1%; background: rgb(248, 248, 248);">

    <ul class="col-md-offset-2 nav nav-tabs" style="margin-top:0%;border: none; margin-left: 2%;">
        <li class="active"><a href="#" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Estructura Planos </a></li>
        <li><a href="/DescuentosNomina/ConfiguracionPlanos/ConformacionDeLosPlanos" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Conformación De Los Planos </a></li>
        <li><a href="/DescuentosNomina/ConfiguracionPlanos/RelacionPlanosEmpresa" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Relacion - Planos Empresa </a></li>
    </ul>
    <div class="tab-content contenedortabs">
        <div id="menu1" class="tab-pane fade in active">
            <div class="col-md-12"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 100%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Configuración - Estructura Planos</h3></div>
            <div class="col-md-12">
                <div class="col m-5">
                    <a href="/DescuentosNomina/ConfiguracionPlanos/CrearEstructuraPlanos" class="btn btn-primary" data-toggle="modal">
                        Agregar - Nuevo Plano
                    </a>
                </div>
                <br />
                <div style="width:100%; margin:0 auto" class="tablecontainer">
                    <table data-order='[[ 0, "asc" ]]' id="PrioridNomi" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-condensed">
                        <thead>
                            <tr>

                                <th>Nombre Plano</th>
                                <th>Fecha de Creacion</th>
                                <th>User Control</th>
                                <th>Estado</th>
                                <th>Detalles & Actualizacion</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.NombreEstructuraPlanos
                                    </td>
                                    <td>
                                        @item.FechaCreacionEstructuraPlanos
                                    </td>
                                    <td>
                                        @item.UserControlEstructuraPlanos
                                    </td>

                                    <td>
                                        @if (item.EstadoEstructuraPlanos == true)
                                        {


                                            <span>Activo</span>
                                        }
                                        else
                                        {
                                            <span>Inactivo</span>
                                        }
                                    </td>

                                    <td>
                                        <a class="btn btn-primary btn-xs" title="Editar" href="@Url.Action("EditarEstructuraPlanos", "ConfiguracionPlanos", new { id = item.IdEstructuraPlanos })">
                                            <i class="glyphicon glyphicon-edit"></i>
                                        </a>

                                        <a class="btn btn-danger btn-xs" onclick="location.href='../ConfiguracionPlanos/EliminarEstructuraPlanos?id=@item.IdEstructuraPlanos'" title="Eliminar">
                                            <i class="glyphicon glyphicon-remove"></i>
                                        </a>

                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <a href="/DescuentosNomina/InicioDescuentosNomina/ModulosDescuentosNomina" class="btn btn-primary" data-toggle="modal">
                    Retornar
                </a>

            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="//cdn.datatables.net/1.12.0/js/jquery.dataTables.min.js"></script>


    <script>
        $('#PrioridNomi').DataTable({
            "language": {
                "url": "/Content/Spanish.json"
            },
            "pageLength": 10,
            lengthMenu: [10, 20, 50],
        });


    </script>
}
