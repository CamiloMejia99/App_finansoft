@model IEnumerable<FNTC.Finansoft.Accounting.DTO.OperativaDeCaja.CuadreCajaPorCajero>

@{
    ViewBag.Title = "Lista Para cierre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/css/sweetalert.css" rel="stylesheet" />
<link href="~/Content/datatables.boostrap.min.css" rel="stylesheet" />
<script src="~/Scripts/datatable.js"></script>
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
<script src="~/Content/tools/direccion/Nomemclaturas.min.js"></script>

<script type="text/javascript" class="init">
    $(document).ready(function () {
        $('#example').DataTable({
            "pagingType": 'full_numbers',
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
            }
        });
    });
</script>

<div class="col-md-13" style="background: rgb(248, 248, 248)">
    <div class="form-group">
        <div class="col-md-10"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 123%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Cierre de Caja</h3></div>
        <div class="col-md-1" style=" margin-top:35px;">
            <a class="" href="/Dashboard/Default#&configuracion" title="Atras">
                <i class="fa fa-arrow-circle-o-left fa-2x " aria-hidden="true">Volver</i>

            </a>
        </div>
    </div>

    <div class="col-md-12 contenido">
        <div class="form-group">
            <button class="js-refrescar"><i class="fa fa-refresh" aria-hidden="true"></i> Actualizar</button>

        </div>
    </div>

    <div class="modal fade" data-backdrop="static" id="centro" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <div class="modal-body">
                </div>
            </div>
        </div>
    </div>

    <div class="table-responsive col-md-12">
        <div class="col-md-12">
            <table id="example" class="table table-striped table-bordered dataTable no-border" widcellspacing="0">
                <thead>
                    <tr>

                        <th class="medium columnatablaazul2">
                            <label>Fecha</label>
                        </th>
                        <th class="medium columnatablaazul2">
                            <label> Caja</label>
                        </th>
                        <th class="medium columnatablaazul2">
                            <label>Cajero</label>
                        </th>
                        <th class="medium columnatablaazul2">
                            <label>Retiros en efectifo</label>
                        </th>
                        <th class="medium columnatablaazul2">
                            <label>Retiros en Cheque</label>
                        </th>
                        <th class="medium columnatablaazul2">
                            <label>Consignacion en efectivo</label>
                        </th>
                        <th class="medium columnatablaazul2">
                            <label>Consignacion en Cheque</label>
                        </th>
                        <th class="medium columnatablaazul2">
                            <label>efectivo en Caja</label>
                        </th>

                        <th></th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        if (item.cierre == 0)
                        {


                            <tr class="align-center medium" style="color:Red;">
                                <td>
                                    @Html.DisplayFor(modelItem => item.fecha)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.codigo_caja)<span> - </span>
                                    @Html.DisplayFor(modelItem => item.Caja.Nombre_caja)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nit_cajero)<span> - </span>
                                    @Html.DisplayFor(modelItem => item.Terceros.NOMBRE)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.retiros_efectivo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.retiros_cheque)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.consignacion_efectivo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.consignacion_cheque)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tope)
                                </td>
                                <td>
                                    <a class="btn btn-inline btn-xs btn-primary" href="/OperativaDeCaja/CuadreCajaPorCajeroes/Delete?id=@item.id" data-toggle="modal" data-target="#centro" title="Cierre" value="Eliminar">
                                        <i class="fa fa-suitcase" aria-hidden="true"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                        else
                        {
                            <tr class="align-center medium">
                                <td>
                                    @Html.DisplayFor(modelItem => item.fecha)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.codigo_caja)<span> - </span>
                                    @Html.DisplayFor(modelItem => item.Caja.Nombre_caja)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nit_cajero)<span> - </span>
                                    @Html.DisplayFor(modelItem => item.Terceros.NOMBRE)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.retiros_efectivo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.retiros_cheque)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.consignacion_efectivo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.consignacion_cheque)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tope)
                                </td>
                                <td>
                                    <a class="btn btn-inline btn-xs btn-primary" href="/OperativaDeCaja/CuadreCajaPorCajeroes/Delete?id=@item.id" data-toggle="modal" data-target="#centro" title="Eliminar" value="Eliminar">
                                        <i class="fa fa-suitcase" aria-hidden="true"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <br /> <br />
        </div>
    </div>
</div>

<style>
    body {
        background-color: #DDD;
    }
</style>
@if (Convert.ToString(Session["fallo" + User.Identity.Name]) == "no")
{
    <script>
        window.onload = function () {
            swal('Cierre', 'El cierre ya fue realizado', 'warning');
        }
    </script>
    Session["fallo" + User.Identity.Name] = null;

}
else
{
    if (Convert.ToString(Session["fallo" + User.Identity.Name]) == "si")
    {
        <script>
            window.onload = function () {
                swal('Cierre', 'Se Realizo el cierre de caja con exito', 'success');
            }
        </script>
        Session["fallo" + User.Identity.Name] = null;

    }
}




<script>
    function printDiv(areaImprimir) {
        var contenido = document.getElementById(areaImprimir).innerHTML;
        var contenidoOriginal = document.body.innerHTML;

        document.body.innerHTML = contenido;

        window.print();

        document.body.innerHTML = contenidoOriginal;
    }
</script>
<script>

    //refrescar un div
    $(".js-refrescar").click(function () {
        $("#mostrar").html("");
        $("#mostrar").load("/configCajeroes/Index");
    });


    //Al Ocultar el modal
    $(document.body).on('hidden.bs.modal', function () {
        $('#centro').removeData('bs.modal');
        $(".js-refrescar").click();
    });
</script>

