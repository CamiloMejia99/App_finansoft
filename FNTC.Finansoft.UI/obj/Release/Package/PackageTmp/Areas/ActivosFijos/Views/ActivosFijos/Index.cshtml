@model IEnumerable<FNTC.Finansoft.Accounting.DTO.ActivosFijos.BActivosFijos>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:4%; background: rgb(248, 248, 248);">
    <!--
    <div class="col-md-1" style="margin-top: 20px">
        <a class="" href="/Aportes/Aportes/Index" title="Atras">
            <i class="fa fa-arrow-circle-o-left fa-2x " aria-hidden="true">Volver</i>
        </a>
    </div>
        -->
    <ul class="col-md-offset-2 nav nav-tabs" style="margin-top:2%;border: none; margin-left: 2%;">
        <li class="active"><a href="/ActivosFijos/ActivosFijos" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Activos Fijos </a></li>
        <li><a href="/ActivosFijos/Grupos" class="tabsnota"><i class="fa fa-file-text" aria-hidden="true"></i> Configuraciones </a></li>
    </ul>
    <div class="tab-content contenedortabs">
        <div id="menu1" class="tab-pane fade in active">
            <div class="col-md-12"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 100%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Activos Fijos</h3></div>
            <div class="col-md-12">

                <p>
                    @Html.ActionLink("Agregar Activo", "Create", null, null, new { @class = "btn btn-primary btn-large" })
                </p>
                <div class="table-responsive text-nowrap">
                    <table class="table table-striped">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.numeroActivo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.nombreActivo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.numeroSerie)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ubicacionFisicaId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.grupoId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.claseActivoId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.valorLibros)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.numeroActivo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombreActivo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.numeroSerie)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UbicacionFisica.nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GruposActivosFijos.nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ClaseDeActivo.nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.valorLibros)
                                </td>                               
                                <td>
                                    @Html.ActionLink("Detalles", "Edit", new { id = item.id }, new { @class = "btn btn-info btn-xs" })
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>          
        </div><!--MENU-->
    </div><!--CONTENEDOR TABS-->
</div>