@model FNTC.Finansoft.Accounting.DTO.FabricaCreditos.FCPasosAp

@{
    ViewBag.Title = "Fabrica de Creditos";
    Layout = "~/Views/Shared/_Layoutcreditos.cshtml";
    var idSolicitud = ViewBag.idSolicitud;
    var idAsociado = ViewBag.idAsociado;
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idAp)


        <div class="form-group col-md-4">
            
            <input type="hidden" value="@idSolicitud" class="form-control" autocomplete="off" readonly />
            <label>NIT Asociando:</label>
            <input type="text" value="@idAsociado" class="form-control" autocomplete="off" readonly />


            <label class="control-label"> VERIFICACION :</label>
            <select class="form-control">
                <option value="Documentacion">Documentacion Aprobada</option>
            </select>

            <label>Comentarios:</label>
            <textarea type="text" name="ComentarioAnDoc" id="ComentarioAnDoc" class="form-control" autocomplete="off"></textarea>

            <br />
            <input type="submit" value="Guardar" class="btn btn-primary" />
            <a id="Cancelar" class="btn btn-danger" data-toggle="modal">
                Cancelar
            </a>
        </div>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
    $("#Cancelar").click(function () {
        location.href = '@Url.Action("AnalisisFC", "CrearSolicitud", new { id = idSolicitud })';
    });

    </script>
}