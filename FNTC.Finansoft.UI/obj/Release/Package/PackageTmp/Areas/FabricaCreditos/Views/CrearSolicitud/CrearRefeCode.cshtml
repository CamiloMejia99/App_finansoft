@model FNTC.Finansoft.Accounting.DTO.FabricaCreditos.DataReferenciasCodeudorFC

@{
    ViewBag.Title = "Referencia - Codeudor";
    Layout = "~/Views/Shared/_Layoutcreditos.cshtml";
    var idSolicitud = ViewBag.idSolicitud;
}


<script src="~/Scripts/sweetalert.min.js"></script>
<link href="~/Content/css/sweetalert.css" rel="stylesheet" />

<div class="container" style="margin-top:2%; background: rgb(248, 248, 248);">

    <div class="tab-content contenedortabs">
        <div id="menu1" class="tab-pane fade in active">
            <div class="col-md-12"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 100%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;"> Referencias (Familiares / Personales) </h3></div>
            <div class="col-md-12">
               
                <div class="modal-body">
                    @using (Html.BeginForm("CrearRefeCode", "CrearSolicitud", new { area = "FabricaCreditos" }, FormMethod.Post, new { id = "theForm" }))
                    {
                        @Html.AntiForgeryToken()

                    <div class="form">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <input id="modo" name="modo" hidden readonly />
                        <div class="row">

                            <input type="hidden" name="IDSOLICITUD" id="IDSOLICITUD" class="form-control" value="@idSolicitud" readonly />

                        </div>

                        <div class="row">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group col-md-4">
                                <label class="control-label">Parentesco :</label>

                                <select class="form-control" id="PARENTESCO" name="PARENTESCO">

                                    <option value="">Seleccionar</option>
                                    <option value="Familiar">Familiar</option>
                                    <option value="Pareja">Pareja</option>
                                    <option value="Amigo">Amigo</option>
                                    <option value="Otros">Otros</option>

                                </select>

                                @Html.ValidationMessageFor(model => model.PARENTESCO, "", new { @class = "text-danger" })


                            </div>

                            <div class="form-group col-md-4">
                                <label class="control-label">Primer Nombre :</label>

                                @Html.EditorFor(model => model.NOMBRE1, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                                @Html.ValidationMessageFor(model => model.NOMBRE1, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group col-md-4">
                                <label class="control-label">Segundo Nombre :</label>

                                @Html.EditorFor(model => model.NOMBRE2, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                                @Html.ValidationMessageFor(model => model.NOMBRE2, "", new { @class = "text-danger" })

                            </div>


                        </div>
                        <div class="row">

                            <div class="form-group col-md-4">
                                <label class="control-label">Primer Apellido :</label>

                                @Html.EditorFor(model => model.APELLIDO1, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                                @Html.ValidationMessageFor(model => model.APELLIDO1, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group col-md-4">
                                <label class="control-label">Segundo Apellido :</label>

                                @Html.EditorFor(model => model.APELLIDO2, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                                @Html.ValidationMessageFor(model => model.APELLIDO2, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group col-md-4">
                                <label class="control-label">Edad :</label>

                                @Html.EditorFor(model => model.EDAD, new { htmlAttributes = new { @class = "form-control", type = "number", @min = "18", @max = "100", @id = "EDAD", @autocomplete = "off" } })
                                @Html.ValidationMessageFor(model => model.EDAD, "", new { @class = "text-danger" })

                            </div>


                        </div>

                        <div class="row">


                            <div class="form-group col-md-4">
                                <label class="control-label">Telefono :</label>

                                @Html.EditorFor(model => model.TELEFONO, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", type = "number" } })
                                @Html.ValidationMessageFor(model => model.TELEFONO, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group col-md-4">
                                <label class="control-label">Celular :</label>

                                @Html.EditorFor(model => model.CELULAR, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", type = "number" } })
                                @Html.ValidationMessageFor(model => model.CELULAR, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group col-md-4">
                                <label class="control-label">Direccion Domicilio :</label>

                                @Html.EditorFor(model => model.DIRECCIONRESIDENCIA, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                                @Html.ValidationMessageFor(model => model.DIRECCIONRESIDENCIA, "", new { @class = "text-danger" })

                            </div>

                        </div>
                        <div class="row">

                            
                            <div class="form-group col-md-4">
                                <label class="control-label">Actividad Economica :</label>

                                @Html.EditorFor(model => model.ACTIVIDADECONOMICA, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                                @Html.ValidationMessageFor(model => model.ACTIVIDADECONOMICA, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group col-md-4">
                                <label class="control-label">Tiempo de Conocerlo :</label>

                                <select class="form-control" id="TIEMPODECONOCER" name="TIEMPODECONOCER">

                                    <option value="">Seleccionar</option>
                                    <option value="1A3">1 a 3 Meses</option>
                                    <option value="3A6">3 a 6 Meses</option>
                                    <option value="6A12">6 a 12 Meses</option>
                                    <option value="12A24">12 a 24 Meses</option>
                                    <option value="24A48">24 a 48 Meses</option>
                                    <option value="MAS">Mas de 48 Meses</option>

                                </select>

                                @Html.ValidationMessageFor(model => model.TIEMPODECONOCER, "", new { @class = "text-danger" })


                            </div>

                        </div>
                 

                        <div class="row">
                            <div class="modal-footer">

                                <button id="guardarConfig" type="button" class="btn btn-primary">Guardar</button>
                            </div>
                        </div>

                    </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>

    var VNIT, VNOMBRE1, VNOMBRE2, VAPELLIDO1, VAPELLIDO2, VGENERO, VEDAD, VTELEFONO, VCORREO, VDIRECCIONRESIDENCIA, VACTIVIDADECONOMICA, VPARENTESCO, VINFADICIONAL, VTIEMPODECONOCER;
    $("#guardarConfig").on('click', function () {
        VNIT = $("#NIT").val();
        VNOMBRE1 = $("#NOMBRE1").val();
        VNOMBRE2 = $("#NOMBRE2").val();
        VAPELLIDO1 = $("#APELLIDO1").val();
        VAPELLIDO2 = $("#APELLIDO2").val();
        VGENERO = $("#GENERO").val();
        VEDAD = $("#EDAD").val();
        VTELEFONO = $("#TELEFONO").val();
        VCORREO = $("#CORREO").val();
        VDIRECCIONRESIDENCIA = $("#DIRECCIONRESIDENCIA").val();
        VACTIVIDADECONOMICA = $("#ACTIVIDADECONOMICA").val();
        VPARENTESCO = $("#PARENTESCO").val();
        VINFADICIONAL = $("#INFADICIONAL").val();
        VTIEMPODECONOCER = $("#TIEMPODECONOCER").val();


        if ( VNOMBRE1.length == 0 || VNOMBRE2.length == 0 || VAPELLIDO1.length == 0 || VAPELLIDO2.length == 0 || VTELEFONO.length == 0 || VDIRECCIONRESIDENCIA.length == 0 || VACTIVIDADECONOMICA.length == 0 || VPARENTESCO.length == 0 || VTIEMPODECONOCER.length == 0) {
            Swal.fire({
                icon: 'error',
                text: 'Diligenciar Todos los Campos'
            });
        } else if (VEDAD <= 17 || VEDAD >= 100) {
            Swal.fire({
                icon: 'error',
                text: 'Edad no Permitida'
            });

        }  else {

            $("#theForm").submit();
        }

    });

</script>